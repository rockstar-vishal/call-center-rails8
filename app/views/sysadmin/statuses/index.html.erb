<% content_for :page_title, "Statuses Management" %>

<div class="sm:flex sm:items-center">
  <div class="sm:flex-auto">
    <h1 class="text-xl font-semibold text-gray-900">Statuses</h1>
    <p class="mt-2 text-sm text-gray-700">Manage lead statuses used throughout the system.</p>
  </div>
  <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
    <%= link_to "Add status", new_sysadmin_status_path, class: "inline-flex items-center justify-center rounded-md border border-transparent bg-indigo-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-indigo-700" %>
  </div>
</div>

<div class="mt-8 flex flex-col">
  <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
    <table class="min-w-full divide-y divide-gray-300">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wide">Name</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wide">Tag</th>
          <th class="relative px-6 py-3"><span class="sr-only">Actions</span></th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @statuses.each do |status| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= status.name %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= status.tag %></td>
            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
              <%= link_to "Edit", edit_sysadmin_status_path(status), class: "text-indigo-600 hover:text-indigo-900 mr-4" %>
              <%= link_to "Delete", sysadmin_status_path(status), 
                    data: { "turbo-method": :delete, "turbo-confirm": "Are you sure?" }, 
                    class: "text-red-600 hover:text-red-900" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
