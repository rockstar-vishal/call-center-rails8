<% content_for :page_title, "New User" %>

<div class="min-h-screen bg-gradient-to-br from-slate-50 via-white to-slate-100 py-12">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-12">
      <h1 class="text-3xl font-bold text-gray-900 mb-4">Create New User</h1>
      <p class="text-lg text-gray-600">Add a new user to the system with appropriate permissions</p>
    </div>

    <!-- Form Card -->
    <div class="bg-white/80 backdrop-blur-sm rounded-3xl shadow-xl shadow-gray-200/50 border border-white/20 overflow-hidden">
      <%= form_with(model: [:sysadmin, @user], local: true, class: "space-y-0") do |form| %>
        
        <!-- Error Messages -->
        <% if @user.errors.any? %>
          <div class="p-8 pb-0">
            <div class="rounded-2xl bg-red-50 border border-red-200 p-6">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-6 w-6 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="ml-4">
                  <h3 class="text-base font-semibold text-red-800 mb-2">
                    <%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:
                  </h3>
                  <ul class="text-sm text-red-700 space-y-1">
                    <% @user.errors.full_messages.each do |message| %>
                      <li class="flex items-center">
                        <span class="w-1.5 h-1.5 bg-red-400 rounded-full mr-2"></span>
                        <%= message %>
                      </li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Form Fields -->
        <div class="p-8 space-y-8">
          
          <!-- Personal Information Section -->
          <div class="space-y-6">
            <div class="border-b border-gray-200 pb-4">
              <h3 class="text-lg font-semibold text-gray-900">Personal Information</h3>
              <p class="text-sm text-gray-600 mt-1">Basic details about the user</p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
              <div class="space-y-2">
                <%= form.label :name, "Full Name", class: "block text-sm font-semibold text-gray-700" %>
                <div class="relative">
                  <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                    <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                  </div>
                  <%= form.text_field :name, 
                        class: "block w-full pl-12 pr-4 py-4 text-gray-900 placeholder-gray-500 bg-white border border-gray-200 rounded-2xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200 text-base",
                        placeholder: "Enter full name" %>
                </div>
              </div>

              <div class="space-y-2">
                <%= form.label :phone, "Phone Number", class: "block text-sm font-semibold text-gray-700" %>
                <div class="relative">
                  <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                    <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                    </svg>
                  </div>
                  <%= form.text_field :phone, 
                        class: "block w-full pl-12 pr-4 py-4 text-gray-900 placeholder-gray-500 bg-white border border-gray-200 rounded-2xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200 text-base",
                        placeholder: "Enter phone number" %>
                </div>
              </div>
            </div>

            <div class="space-y-2">
              <%= form.label :email, "Email Address", class: "block text-sm font-semibold text-gray-700" %>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                  <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"></path>
                  </svg>
                </div>
                <%= form.email_field :email, 
                      class: "block w-full pl-12 pr-4 py-4 text-gray-900 placeholder-gray-500 bg-white border border-gray-200 rounded-2xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200 text-base",
                      placeholder: "Enter email address" %>
              </div>
            </div>
          </div>

          <!-- Password Section -->
          <div class="space-y-6">
            <div class="border-b border-gray-200 pb-4">
              <h3 class="text-lg font-semibold text-gray-900">Password Setup</h3>
              <p class="text-sm text-gray-600 mt-1">Set the initial password for this user</p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
              <div class="space-y-2">
                <%= form.label :password, "Password", class: "block text-sm font-semibold text-gray-700" %>
                <div class="relative">
                  <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                    <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                    </svg>
                  </div>
                  <%= form.password_field :password, 
                        class: "block w-full pl-12 pr-4 py-4 text-gray-900 placeholder-gray-500 bg-white border border-gray-200 rounded-2xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200 text-base",
                        placeholder: "Enter password",
                        required: true %>
                </div>
              </div>

              <div class="space-y-2">
                <%= form.label :password_confirmation, "Confirm Password", class: "block text-sm font-semibold text-gray-700" %>
                <div class="relative">
                  <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                    <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                  </div>
                  <%= form.password_field :password_confirmation, 
                        class: "block w-full pl-12 pr-4 py-4 text-gray-900 placeholder-gray-500 bg-white border border-gray-200 rounded-2xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200 text-base",
                        placeholder: "Confirm password",
                        required: true %>
                </div>
              </div>
            </div>
          </div>

          <!-- System Access Section -->
          <div class="space-y-6">
            <div class="border-b border-gray-200 pb-4">
              <h3 class="text-lg font-semibold text-gray-900">System Access</h3>
              <p class="text-sm text-gray-600 mt-1">Company and role assignment</p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
              <div class="space-y-2">
                <%= form.label :company_id, "Company", class: "block text-sm font-semibold text-gray-700" %>
                <%= form.select :company_id, 
                      options_from_collection_for_select(@companies, :id, :name, @user.company_id), 
                      { prompt: "Select a company" }, 
                      { class: "block w-full py-4 px-4 text-gray-900 bg-white border border-gray-200 rounded-2xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200 text-base" } %>
              </div>

              <div class="space-y-2">
                <%= form.label :role_id, "Role", class: "block text-sm font-semibold text-gray-700" %>
                <%= form.select :role_id, 
                      options_from_collection_for_select(@roles, :id, :name, @user.role_id), 
                      { prompt: "Select a role" }, 
                      { class: "block w-full py-4 px-4 text-gray-900 bg-white border border-gray-200 rounded-2xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200 text-base" } %>
              </div>
            </div>
          </div>

          <!-- Security Notice -->
          <div class="rounded-2xl bg-blue-50 border border-blue-200 p-6">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-6 w-6 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-4">
                <h4 class="text-base font-semibold text-blue-800">Password Requirements</h4>
                <p class="text-sm text-blue-700 mt-1">
                  Password must be at least 6 characters long. The user can change this password after their first login.
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- Form Actions -->
        <div class="bg-gray-50/80 backdrop-blur-sm px-8 py-6 flex justify-end space-x-4">
          <%= link_to "Cancel", sysadmin_users_path, 
                class: "inline-flex items-center px-6 py-3 border border-gray-300 text-base font-medium rounded-2xl text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-200" %>
          <%= form.submit "Create User", 
                class: "inline-flex items-center px-8 py-3 border border-transparent text-base font-semibold rounded-2xl text-white bg-gradient-to-r from-indigo-600 to-indigo-700 hover:from-indigo-700 hover:to-indigo-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-200 transform hover:scale-[1.02] active:scale-[0.98] shadow-lg shadow-indigo-500/25" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
