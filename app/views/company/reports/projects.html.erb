<% content_for :page_title, "Projects Report" %>

<div class="space-y-6">
  <!-- Page Header -->
  <div class="bg-white shadow rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
      <h1 class="text-2xl font-bold text-gray-900">Projects Report</h1>
      <p class="mt-1 text-sm text-gray-600">Lead distribution across projects and statuses</p>
    </div>
  </div>

  <!-- Smart Search -->
  <%= render 'shared/reports_smart_search', fields: [:date_range, :users], result_count: @result_count %>

  <!-- Projects Report Table -->
  <div class="bg-white shadow rounded-lg overflow-hidden">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Project
            </th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
              Total Calls
            </th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
              Attempts - Interested
            </th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
              Attempts - Dead
            </th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
              Unique Leads Attempted
            </th>
          </tr>
        </thead>
        <% total_calls = 0; total_hot = 0; total_dead = 0; total_uniq = 0 %>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @projects.each do |project| %> 
            <% this_project_calls = @filtered_logs.where(lead: {project_id: project.id}) %>
            <% hot_calls = this_project_calls.where(status_id: @hot_status) %>
            <% dead_calls = this_project_calls.where(status_id: @dead_status) %>
            <% uniq_leads = this_project_calls.map(&:lead_id).uniq %>
            <% total_calls += this_project_calls.size; total_hot = hot_calls.size; total_dead = dead_calls.size; total_uniq = uniq_leads.size %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                <%= project.name %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 text-center">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                  <%= this_project_calls.size %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 text-center">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  <%= hot_calls.size %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 text-center">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                  <%= dead_calls.size %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 text-center">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                  <%= uniq_leads.size %>
                </span>
              </td>
            </tr>
          <% end %>
          
          <!-- Total Row -->
          <tr class="bg-gray-50 border-t-2 border-gray-300">
            <td class="px-6 py-4 whitespace-nowrap text-sm font-bold text-gray-900">
              Total
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-bold text-gray-900 text-center">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-200 text-blue-900">
                <%= total_calls %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-bold text-gray-900 text-center">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-200 text-green-900">
                <%= total_hot %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-bold text-gray-900 text-center">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-200 text-red-900">
                <%= total_dead %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-bold text-gray-900 text-center">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-200 text-purple-900">
                <%= total_uniq %>
              </span>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
