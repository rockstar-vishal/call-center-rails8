<% content_for :page_title, "Productivity Report" %>

<div class="space-y-6">
  <!-- Page Header -->
  <div class="bg-white shadow rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
      <h1 class="text-2xl font-bold text-gray-900">Productivity Report</h1>
      <p class="mt-1 text-sm text-gray-600">User productivity metrics by time intervals</p>
    </div>
  </div>

  <!-- Smart Search -->
  <%= render 'shared/reports_smart_search', fields: [:date_range, :projects], result_count: @result_count %>

  <!-- Productivity Report Table -->
  <div class="bg-white shadow rounded-lg overflow-hidden">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              User
            </th>
            <% TimeIntervals.all.each do |interval| %>
              <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
                <%= interval[:label] %>
              </th>
            <% end %>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @users.each do |user| %>
            <% user_data = @productivity_data[user.id] || {} %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                <%= user.name %>
              </td>
              <% TimeIntervals.all.each do |interval| %>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 text-center">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= interval[:color_class] %>">
                    <%= link_to (user_data[interval[:name]] || 0), detail_path(user_ids: [user.id], time_range: interval[:name]) %>
                  </span>
                </td>
              <% end %>
            </tr>
          <% end %>
          
          <!-- Total Row -->
          <tr class="bg-gray-50 border-t-2 border-gray-300">
            <td class="px-6 py-4 whitespace-nowrap text-sm font-bold text-gray-900">
              Total
            </td>
            <% TimeIntervals.all.each do |interval| %>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-bold text-gray-900 text-center">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= interval[:total_color_class] %>">
                  <%= link_to @totals[interval[:name]], detail_path(time_range: interval[:name]) %>
                </span>
              </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
