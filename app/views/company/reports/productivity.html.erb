<% content_for :page_title, "Productivity Report" %>

<div class="space-y-6">
  <!-- Page Header -->
  <div class="bg-white shadow rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
      <h1 class="text-2xl font-bold text-gray-900">Productivity Report</h1>
      <p class="mt-1 text-sm text-gray-600">User productivity metrics by time intervals</p>
    </div>
  </div>

  <!-- Smart Search -->
  <%= render 'shared/reports_smart_search', fields: [:date_range, :projects], result_count: @result_count %>

  <!-- Productivity Report Table -->
  <div class="bg-white shadow rounded-lg overflow-hidden">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              User
            </th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
              8am - 10am
            </th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
              10am - 2pm
            </th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
              2pm - 4pm
            </th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
              4pm - 6pm
            </th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
              6pm - 8pm
            </th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
              8pm - 10pm
            </th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
              Others
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @users.each do |user| %>
            <% user_data = @productivity_data[user.id] || {} %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                <%= user.name %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 text-center">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                  <%= user_data['8am_10am'] || 0 %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 text-center">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  <%= user_data['10am_2pm'] || 0 %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 text-center">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                  <%= user_data['2pm_4pm'] || 0 %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 text-center">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-orange-100 text-orange-800">
                  <%= user_data['4pm_6pm'] || 0 %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 text-center">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                  <%= user_data['6pm_8pm'] || 0 %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 text-center">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                  <%= user_data['8pm_10pm'] || 0 %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 text-center">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                  <%= user_data['others'] || 0 %>
                </span>
              </td>
            </tr>
          <% end %>
          
          <!-- Total Row -->
          <tr class="bg-gray-50 border-t-2 border-gray-300">
            <td class="px-6 py-4 whitespace-nowrap text-sm font-bold text-gray-900">
              Total
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-bold text-gray-900 text-center">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-200 text-blue-900">
                <%= @totals['8am_10am'] %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-bold text-gray-900 text-center">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-200 text-green-900">
                <%= @totals['10am_2pm'] %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-bold text-gray-900 text-center">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-200 text-yellow-900">
                <%= @totals['2pm_4pm'] %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-bold text-gray-900 text-center">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-orange-200 text-orange-900">
                <%= @totals['4pm_6pm'] %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-bold text-gray-900 text-center">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-200 text-purple-900">
                <%= @totals['6pm_8pm'] %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-bold text-gray-900 text-center">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-200 text-red-900">
                <%= @totals['8pm_10pm'] %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-bold text-gray-900 text-center">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-200 text-gray-900">
                <%= @totals['others'] %>
              </span>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
