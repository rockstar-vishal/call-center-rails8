<% content_for :page_title, "Activity Report" %>

<div class="space-y-6">
  <!-- Page Header -->
  <div class="bg-white shadow rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
      <h1 class="text-2xl font-bold text-gray-900">Activity Report</h1>
      <p class="mt-1 text-sm text-gray-600">User activity metrics and performance indicators</p>
    </div>
  </div>

  <!-- Smart Search -->
  <%= render 'shared/reports_smart_search', fields: [:date_range, :projects], result_count: @result_count %>

  <!-- Activity Report Table -->
  <div class="bg-white shadow rounded-lg overflow-hidden">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              User
            </th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
              Total Calls Made
            </th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
              Unique Leads Updated
            </th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
              Total Status Edits
            </th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
              Attempts - Interested
            </th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
              Attempts - Dead
            </th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
              Total Comment Edits
            </th>
          </tr>
        </thead>
        <%total_calls = 0; uniq_calls = 0; total_status = 0; total_hot = 0; total_dead = 0; total_comment = 0%>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @users.each do |user| %>
            <% this_user_activity = @filtered_logs.where(user_id: user.id) %>
            <% uniq_leads = @filtered_logs.where(user_id: user.id).map(&:lead_id).uniq %>
            <% status_edits = @filtered_logs.where.not(status_id: nil) %>
            <% comment_edits = @filtered_logs.where.not(comment: nil) %>
            <% hot_attempts = @filtered_logs.where(status_id: @hot_status) %>
            <% dead_attempts = @filtered_logs.where(status_id: @dead_status) %>
            <%total_calls += this_user_activity.size; uniq_calls += uniq_leads.size; total_status += status_edits.size; total_hot += hot_attempts.size; total_dead += dead_attempts.size; total_comment += comment_edits.size%>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                <%= user.name %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 text-center">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                  <%= link_to this_user_activity.size, detail_path(user_ids: [user.id]), target: "_blank" %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 text-center">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  <%= link_to uniq_leads.size, lead_detail_path(user_ids: [user.id]), target: "_blank" %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 text-center">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                  <%= link_to status_edits.size, detail_path(user_ids: [user.id], status_edited: true), target: "_blank" %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 text-center">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                  <%= link_to hot_attempts.size, detail_path(user_ids: [user.id], status_ids: [@hot_status]), target: "_blank" %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 text-center">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                  <%= link_to dead_attempts.size, detail_path(user_ids: [user.id], status_ids: [@dead_status]), target: "_blank" %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 text-center">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
                  <%= link_to comment_edits.size, detail_path(user_ids: [user.id], comment_edited: true), target: "_blank" %>
                </span>
              </td>
            </tr>
          <% end %>
          
          <!-- Total Row -->
          <tr class="bg-gray-50 border-t-2 border-gray-300">
            <td class="px-6 py-4 whitespace-nowrap text-sm font-bold text-gray-900">
              Total
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-bold text-gray-900 text-center">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-200 text-blue-900">
                <%= link_to total_calls, detail_path, target: "_blank" %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-bold text-gray-900 text-center">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-200 text-green-900">
                <%= link_to uniq_calls, lead_detail_path, target: "_blank" %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-bold text-gray-900 text-center">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-200 text-yellow-900">
                <%= link_to total_status, detail_path(status_edited: true), target: "_blank" %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-bold text-gray-900 text-center">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-200 text-red-900">
                <%= link_to total_hot, detail_path(status_ids: [@hot_status]), target: "_blank" %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-bold text-gray-900 text-center">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-200 text-purple-900">
                <%= link_to total_dead, detail_path(status_ids: [@dead_status]), target: "_blank" %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-bold text-gray-900 text-center">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-200 text-indigo-900">
                <%= link_to total_comment, detail_path(comment_edited: true), target: "_blank" %>
              </span>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
