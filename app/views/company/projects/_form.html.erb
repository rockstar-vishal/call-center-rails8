<div class="py-6 px-4 sm:px-6 lg:px-8">
  <div class="max-w-xl mx-auto w-full space-y-6 lg:space-y-8">
    <!-- Header Section -->
    <div class="text-center">
      <div class="mx-auto h-16 w-16 flex items-center justify-center rounded-full bg-gradient-to-r from-blue-500 to-indigo-600 shadow-lg">
        <% if @project.persisted? %>
          <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
        <% else %>
          <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
          </svg>
        <% end %>
      </div>
      <h2 class="mt-4 lg:mt-6 text-2xl lg:text-3xl font-bold text-gray-900">
        <%= @project.persisted? ? "Edit Project" : "Create New Project" %>
      </h2>
      <p class="mt-2 text-sm text-gray-600">
        <%= @project.persisted? ? "Update project information and details" : "Set up a new project for your company" %>
      </p>
    </div>

    <!-- Form Card -->
    <div class="bg-white/80 backdrop-blur-sm shadow-2xl rounded-2xl lg:rounded-3xl border border-gray-200/50">
      <%= form_with(model: [:company, @project], local: true, class: "p-4 lg:p-8 space-y-6 lg:space-y-8") do |form| %>
        <!-- Error Messages -->
        <% if @project.errors.any? %>
          <div class="rounded-2xl bg-red-50/80 backdrop-blur-sm border border-red-200 p-6">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-6 w-6 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-4">
                <h3 class="text-base font-semibold text-red-800">
                  Please fix the following <%= pluralize(@project.errors.count, "error") %>:
                </h3>
                <ul class="mt-3 text-sm text-red-700 space-y-2">
                  <% @project.errors.full_messages.each do |message| %>
                    <li class="flex items-center">
                      <span class="w-1.5 h-1.5 bg-red-400 rounded-full mr-3"></span>
                      <%= message %>
                    </li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Form Fields -->
        <div class="space-y-6 lg:space-y-8">
          <!-- Project Name -->
          <div>
            <%= form.label :name, class: "block text-base font-semibold text-gray-700 mb-3" do %>
              <span class="flex items-center">
                <svg class="h-5 w-5 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                </svg>
                Project Name
              </span>
            <% end %>
            <%= form.text_field :name, 
                  class: "w-full py-3 lg:py-4 px-4 lg:px-6 border border-gray-300 rounded-xl lg:rounded-2xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 text-base lg:text-lg bg-white/50 backdrop-blur-sm", 
                  placeholder: "Enter project name..." %>
          </div>

          <!-- Project Stats (Only for existing projects) -->
          <% if @project.persisted? %>
            <div class="bg-gray-50 rounded-xl lg:rounded-2xl p-4 lg:p-6 space-y-4">
              <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                <svg class="h-5 w-5 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                </svg>
                Project Statistics
              </h3>
              
              <div class="grid grid-cols-2 gap-4 lg:gap-6">
                <div class="text-center">
                  <div class="text-2xl font-bold text-blue-600"><%= @project.leads.count %></div>
                  <div class="text-sm text-gray-600">Total Leads</div>
                </div>
                <div class="text-center">
                  <div class="text-2xl font-bold text-green-600"><%= @project.created_at.strftime("%b %Y") %></div>
                  <div class="text-sm text-gray-600">Created</div>
                </div>
              </div>
            </div>
          <% end %>

          <!-- Training Content (Admin Only) -->
          <% if current_user.admin? %>
            <div class="bg-gradient-to-r from-purple-50 to-indigo-50 rounded-xl lg:rounded-2xl p-4 lg:p-6 border border-purple-200">
              <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                <svg class="h-5 w-5 text-purple-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                </svg>
                Training Materials
              </h3>
              
              <div class="space-y-4 lg:space-y-6">
                <!-- Training Website URL -->
                <div>
                  <%= form.label :training_website_url, class: "block text-sm font-medium text-gray-700 mb-2" do %>
                    <span class="flex items-center">
                      <svg class="h-4 w-4 text-purple-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0-9v9"></path>
                      </svg>
                      Training Website URL
                    </span>
                  <% end %>
                  <%= form.url_field :training_website_url, 
                        class: "w-full py-2 lg:py-3 px-3 lg:px-4 border border-gray-300 rounded-lg lg:rounded-xl focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all duration-200 bg-white/70 text-sm lg:text-base", 
                        placeholder: "https://example.com/training" %>
                </div>

                <!-- Training Video URL -->
                <div>
                  <%= form.label :training_video, class: "block text-sm font-medium text-gray-700 mb-2" do %>
                    <span class="flex items-center">
                      <svg class="h-4 w-4 text-purple-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                      </svg>
                      Training Video URL
                    </span>
                  <% end %>
                  <%= form.url_field :training_video, 
                        class: "w-full py-2 lg:py-3 px-3 lg:px-4 border border-gray-300 rounded-lg lg:rounded-xl focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all duration-200 bg-white/70 text-sm lg:text-base", 
                        placeholder: "https://youtube.com/watch?v=..." %>
                </div>

                <!-- Reading Material (Rich Text) -->
                <div>
                  <%= form.label :reading_material, class: "block text-sm font-medium text-gray-700 mb-2" do %>
                    <span class="flex items-center">
                      <svg class="h-4 w-4 text-purple-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                      </svg>
                      Reading Material
                    </span>
                  <% end %>
                  <div class="bg-white/70 rounded-lg lg:rounded-xl border border-gray-300 focus-within:ring-2 focus-within:ring-purple-500 focus-within:border-transparent transition-all duration-200">
                    <%= form.rich_text_area :reading_material, 
                          class: "w-full min-h-[150px] lg:min-h-[200px] p-3 lg:p-4 border-0 rounded-lg lg:rounded-xl focus:outline-none resize-y text-sm lg:text-base", 
                          placeholder: "Add detailed reading material, instructions, guidelines, or any other training content..." %>
                  </div>
                  <p class="mt-1 text-xs text-purple-600">Use the rich text editor to format your content with headings, lists, links, and more</p>
                </div>

                <!-- Training Document -->
                <div>
                  <%= form.label :training_doc, class: "block text-sm font-medium text-gray-700 mb-2" do %>
                    <span class="flex items-center">
                      <svg class="h-4 w-4 text-purple-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                      </svg>
                      Training Document (PDF or Word only)
                    </span>
                  <% end %>
                  <%= form.file_field :training_doc, 
                        accept: ".pdf,.doc,.docx",
                        class: "w-full py-3 px-4 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all duration-200 bg-white/70" %>
                  <% if @project.training_doc.attached? %>
                    <p class="mt-2 text-sm text-gray-600">
                      Current file: <%= @project.training_doc.filename %>
                      (<%= number_to_human_size(@project.training_doc.byte_size) %>)
                    </p>
                  <% end %>
                  <p class="mt-1 text-xs text-purple-600">Accepts PDF and Word documents up to 10MB</p>
                </div>
              </div>
            </div>
          <% end %>

          <!-- Company Info (Read-only) -->
          <div class="bg-blue-50 rounded-2xl p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-3 flex items-center">
              <svg class="h-5 w-5 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
              </svg>
              Company Information
            </h3>
            
            <div class="text-sm text-gray-700">
              <p><span class="font-medium">Company:</span> <%= current_company.name %></p>
              <p class="mt-1"><span class="font-medium">Domain:</span> <%= current_company.domain %></p>
            </div>
          </div>
        </div>

        <!-- Form Actions -->
        <div class="bg-gray-50/80 backdrop-blur-sm px-8 py-6 -mx-8 -mb-8 rounded-b-3xl flex justify-between items-center">
          <%= link_to @project.persisted? ? company_project_path(@project) : company_projects_path, 
                class: "inline-flex items-center px-6 py-3 border border-gray-300 text-base font-medium rounded-2xl text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200" do %>
            <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Cancel
          <% end %>
          
          <%= form.submit @project.persisted? ? "Update Project" : "Create Project", 
                class: "inline-flex items-center px-8 py-3 border border-transparent text-base font-medium rounded-2xl text-white bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200 shadow-lg hover:shadow-xl" %>
        </div>
      <% end %>
    </div>

    <!-- Help Text -->
    <div class="text-center">
      <p class="text-sm text-gray-500">
        <%= @project.persisted? ? "Need help? Contact your system administrator for assistance." : "Projects help organize and categorize your leads effectively." %>
      </p>
    </div>
  </div>
</div>
