<% content_for :page_title, "Project Details" %>

<div class="bg-white shadow overflow-hidden sm:rounded-lg">
  <div class="px-4 py-5 sm:px-6">
    <div class="flex items-center justify-between">
      <div>
        <h3 class="text-lg leading-6 font-medium text-gray-900"><%= @project.name %></h3>
        <% if @project.code.present? %>
          <div class="mt-2 flex items-center space-x-3">
            <span class="text-sm text-gray-600">Project Code:</span>
            <span class="inline-flex items-center px-3 py-1 rounded-md text-sm font-medium bg-gray-100 text-gray-800">
              <%= @project.code %>
            </span>
            <button data-controller="clipboard"
                    data-clipboard-text-value="<%= @project.code %>"
                    data-action="click->clipboard#copy"
                    class="inline-flex items-center px-2 py-1 rounded text-sm font-medium text-gray-600 hover:text-gray-800 hover:bg-gray-200 transition-colors duration-200"
                    title="Copy project code">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
              </svg>
            </button>
          </div>
        <% end %>
        <p class="mt-1 max-w-2xl text-sm text-gray-500">Project information and statistics.</p>
      </div>
      <div class="text-right">
        <p class="text-sm text-gray-500">Last updated</p>
        <p class="text-sm font-medium text-gray-900"><%= @project.updated_at.strftime("%b %d, %Y") %></p>
        <p class="text-xs text-gray-400"><%= time_ago_in_words(@project.updated_at) %> ago</p>
      </div>
    </div>
  </div>
</div>

<!-- Training Materials -->
<% if @project.has_training_content? %>
  <div class="mt-8 bg-gradient-to-r from-purple-50 to-indigo-50 shadow rounded-lg border border-purple-200">
    <div class="px-6 py-5 border-b border-purple-200">
      <div class="flex items-center">
        <svg class="h-6 w-6 text-purple-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
        </svg>
        <h3 class="text-lg font-semibold text-gray-900">Training Materials</h3>
      </div>
      <p class="mt-1 text-sm text-purple-700">Complete training resources for this project</p>
    </div>
    
    <div class="px-6 py-6">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        
        <!-- Training Website -->
        <% if @project.training_website_url.present? %>
          <div class="bg-white rounded-xl p-6 shadow-sm border border-purple-100 hover:shadow-md transition-all duration-200">
            <div class="flex items-center mb-4">
              <div class="h-10 w-10 bg-blue-500 rounded-lg flex items-center justify-center">
                <svg class="h-5 w-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0-9v9"></path>
                </svg>
              </div>
              <h4 class="ml-3 text-lg font-semibold text-gray-900">Training Website</h4>
            </div>
            <p class="text-sm text-gray-600 mb-4">Access comprehensive online training materials</p>
            <%= link_to @project.training_website_url, 
                  target: "_blank", 
                  class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors duration-200" do %>
              <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
              </svg>
              Open Training Site
            <% end %>
          </div>
        <% end %>

        <!-- Training Video -->
        <% if @project.training_video.present? %>
          <div class="bg-white rounded-xl p-6 shadow-sm border border-purple-100 hover:shadow-md transition-all duration-200">
            <div class="flex items-center mb-4">
              <div class="h-10 w-10 bg-red-500 rounded-lg flex items-center justify-center">
                <svg class="h-5 w-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                </svg>
              </div>
              <h4 class="ml-3 text-lg font-semibold text-gray-900">Training Video</h4>
            </div>
            <p class="text-sm text-gray-600 mb-4">Watch video tutorials and demonstrations</p>
            <%= link_to @project.training_video, 
                  target: "_blank", 
                  class: "inline-flex items-center px-4 py-2 bg-red-600 text-white text-sm font-medium rounded-lg hover:bg-red-700 transition-colors duration-200" do %>
              <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h1m4 0h1m-6 4h8m-9-4V8a2 2 0 012-2h8a2 2 0 012 2v2m-9 4V16a2 2 0 002 2h8a2 2 0 002-2v-2"></path>
              </svg>
              Watch Video
            <% end %>
          </div>
        <% end %>

        <!-- Training Document -->
        <% if @project.training_doc.attached? %>
          <div class="bg-white rounded-xl p-6 shadow-sm border border-purple-100 hover:shadow-md transition-all duration-200">
            <div class="flex items-center mb-4">
              <div class="h-10 w-10 bg-green-500 rounded-lg flex items-center justify-center">
                <svg class="h-5 w-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
              </div>
              <h4 class="ml-3 text-lg font-semibold text-gray-900">Training Document</h4>
            </div>
            <p class="text-sm text-gray-600 mb-2">Download detailed training documentation</p>
            <p class="text-xs text-gray-500 mb-4">
              <%= @project.training_doc.filename %> 
              (<%= number_to_human_size(@project.training_doc.byte_size) %>)
            </p>
            <%= link_to rails_blob_path(@project.training_doc, disposition: "attachment"), 
                  class: "inline-flex items-center px-4 py-2 bg-green-600 text-white text-sm font-medium rounded-lg hover:bg-green-700 transition-colors duration-200" do %>
              <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
              Download Document
            <% end %>
          </div>
        <% end %>
      </div>
      
      <!-- No Training Content Message -->
      <% unless @project.has_training_content? %>
        <div class="text-center py-8">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No training materials</h3>
          <p class="mt-1 text-sm text-gray-500">
            <% if current_user.admin? %>
              Add training materials to help your team learn about this project.
            <% else %>
              Training materials will appear here when added by an administrator.
            <% end %>
          </p>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

<!-- Reading Material Section -->
<% if @project.reading_material.present? %>
  <div class="mt-8 bg-gradient-to-r from-indigo-50 to-blue-50 shadow rounded-lg border border-indigo-200">
    <div class="px-6 py-5 border-b border-indigo-200">
      <div class="flex items-center">
        <svg class="h-6 w-6 text-indigo-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
        </svg>
        <h3 class="text-lg font-semibold text-gray-900">Reading Material</h3>
      </div>
      <p class="mt-1 text-sm text-indigo-700">Detailed instructions, guidelines, and reference materials</p>
    </div>
    
    <div class="px-6 py-6">
      <div class="bg-white rounded-xl p-8 shadow-sm border border-indigo-100">
        <div class="prose prose-indigo max-w-none">
          <%= @project.reading_material %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div class="mt-6 flex space-x-3">
  <% if current_user.admin? %>
    <%= link_to "Edit Project", edit_company_project_path(@project), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    <%= link_to "Delete Project", company_project_path(@project), 
          data: { "turbo-method": :delete, "turbo-confirm": "Are you sure you want to delete this project?" }, 
          class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
  <% end %>
</div>
