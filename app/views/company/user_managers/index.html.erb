<% content_for :page_title, "Manage #{@user.name || @user.email}'s Managers" %>

<div class="max-w-4xl mx-auto">
  <!-- User Info Header -->
  <div class="bg-white shadow rounded-lg p-6 mb-8">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <div class="h-12 w-12 rounded-full bg-blue-500 flex items-center justify-center">
          <span class="text-white text-lg font-medium">
            <%= @user.name&.first&.upcase || @user.email&.first&.upcase %>
          </span>
        </div>
      </div>
      <div class="ml-4">
        <h1 class="text-xl font-semibold text-gray-900"><%= @user.name || @user.email %></h1>
        <p class="text-sm text-gray-500">
          <%= @user.role.name %> • <%= @user.email %>
        </p>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <!-- Current Managers -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900">Current Managers</h3>
        <p class="text-sm text-gray-500 mt-1">Managers currently assigned to this user</p>
      </div>
      <div class="px-6 py-4">
        <% if @managers.any? %>
          <div class="space-y-3">
            <% @managers.each do |manager| %>
              <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                <div class="flex items-center">
                  <div class="flex-shrink-0">
                    <div class="h-8 w-8 rounded-full bg-green-500 flex items-center justify-center">
                      <span class="text-white text-sm font-medium">
                        <%= manager.name&.first&.upcase || manager.email&.first&.upcase %>
                      </span>
                    </div>
                  </div>
                  <div class="ml-3">
                    <p class="text-sm font-medium text-gray-900"><%= manager.name || manager.email %></p>
                    <p class="text-xs text-gray-500"><%= manager.email %></p>
                  </div>
                </div>
                <%= link_to "Remove", company_user_remove_manager_path(@user, manager), 
                      data: { "turbo-method": :delete, "turbo-confirm": "Remove this manager?" },
                      class: "text-red-600 hover:text-red-800 text-sm font-medium" %>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-8">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">No managers assigned</h3>
            <p class="mt-1 text-sm text-gray-500">This user doesn't have any managers assigned yet.</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Assign New Manager -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900">Assign Manager</h3>
        <p class="text-sm text-gray-500 mt-1">Add a new manager to this user</p>
      </div>
      <div class="px-6 py-4">
        <% if @available_managers.any? %>
          <%= form_with url: company_user_managers_path(@user), local: true, class: "space-y-4" do |form| %>
            <div class="space-y-2">
              <%= form.label :manager_id, "Select Manager", class: "block text-sm font-semibold text-gray-700" %>
              <%= form.select :manager_id, 
                    options_from_collection_for_select(@available_managers, :id, ->(user) { "#{user.name || user.email} (#{user.email})" }), 
                    { prompt: "Choose a manager..." }, 
                    { class: "block w-full py-3 px-4 border border-gray-300 rounded-2xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200" } %>
            </div>
            
            <div class="pt-4">
              <%= form.submit "Assign Manager", 
                    class: "w-full inline-flex justify-center items-center px-4 py-3 border border-transparent text-sm font-medium rounded-2xl text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200" %>
            </div>
          <% end %>
        <% else %>
          <div class="text-center py-8">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">All managers assigned</h3>
            <p class="mt-1 text-sm text-gray-500">All available managers are already assigned to this user.</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Recursion Prevention Info -->
  <div class="mt-8 rounded-2xl bg-blue-50 border border-blue-200 p-6">
    <div class="flex">
      <div class="flex-shrink-0">
        <svg class="h-6 w-6 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
        </svg>
      </div>
      <div class="ml-4">
        <h4 class="text-base font-semibold text-blue-800">Manager Assignment Rules</h4>
        <ul class="text-sm text-blue-700 mt-2 space-y-1">
          <li>• Only users with "Manager" role can be assigned as managers</li>
          <li>• Users cannot be their own manager</li>
          <li>• Circular management chains are automatically prevented</li>
          <li>• Multiple managers can be assigned to one user</li>
          <li>• Managers and users must be from the same company</li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Back Button -->
  <div class="mt-8 flex justify-center">
    <%= link_to "Back to Users", company_users_path, 
          class: "inline-flex items-center px-6 py-3 border border-gray-300 text-base font-medium rounded-2xl text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200" %>
  </div>
</div>
