<% content_for :page_title, "Leads Management" %>

<div data-controller="search-drawer">

<div class="sm:flex sm:items-center">
  <div class="sm:flex-auto">
    <div class="flex items-center space-x-3">
      <h1 class="text-xl font-semibold text-gray-900">Leads</h1>
      <% if @search_active %>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
          <svg class="mr-1 h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"></path>
          </svg>
          Filtered
        </span>
      <% end %>
    </div>
    <p class="mt-2 text-sm text-gray-700">
      Manage your company's leads and track their progress.
      <% if @search_active %>
        <%= link_to "Clear all filters", company_leads_path, class: "text-blue-600 hover:text-blue-500 ml-2" %>
      <% end %>
    </p>
  </div>
  <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
    <div class="flex space-x-3">
      <button data-action="click->search-drawer#open" class="inline-flex items-center justify-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
        <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
        Smart Search
      </button>
      <%= link_to company_new_lead_import_path, class: "inline-flex items-center justify-center rounded-md border border-blue-300 bg-white px-4 py-2 text-sm font-medium text-blue-700 shadow-sm hover:bg-blue-50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" do %>
        <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"></path>
        </svg>
        Import CSV
      <% end %>
      <%= link_to "Add lead", new_company_lead_path, class: "inline-flex items-center justify-center rounded-md border border-transparent bg-blue-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 sm:w-auto" %>
    </div>
  </div>
</div>

<!-- Quick Filter Status Cards (only show when no filters are applied) -->
<% unless @search_active %>
  <div class="mt-6 mb-6">
    <div class="flex flex-wrap gap-2">
      <% Status.order(:name).each do |status| %>
        <% 
          # Define colors for each status
          card_colors = case status.tag
          when 'new'
            'bg-gray-100 hover:bg-gray-200 text-gray-700 border-gray-300'
          when 'contacted'
            'bg-blue-100 hover:bg-blue-200 text-blue-700 border-blue-300'
          when 'interested'
            'bg-green-100 hover:bg-green-200 text-green-700 border-green-300'
          when 'not_interested'
            'bg-red-100 hover:bg-red-200 text-red-700 border-red-300'
          when 'follow_up'
            'bg-yellow-100 hover:bg-yellow-200 text-yellow-700 border-yellow-300'
          when 'converted'
            'bg-emerald-100 hover:bg-emerald-200 text-emerald-700 border-emerald-300'
          when 'lost', 'dead'
            'bg-rose-100 hover:bg-rose-200 text-rose-700 border-rose-300'
          else
            'bg-gray-100 hover:bg-gray-200 text-gray-700 border-gray-300'
          end
          
          lead_count = Lead.accessible_by(current_user).where(status: status).count
        %>
        
        <%= link_to company_leads_path(search_status_ids: [status.id]), 
              class: "inline-flex items-center px-3 py-1.5 rounded-full text-xs font-medium border #{card_colors} transition-all duration-200 hover:shadow-sm transform hover:scale-105 active:scale-95" do %>
          <%= status.name %>
          <span class="ml-2 px-1.5 py-0.5 bg-white/50 rounded-full text-xs font-semibold">
            <%= lead_count %>
          </span>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>

<div class="mt-8 flex flex-col">
  <div class="-my-2 -mx-4 overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="inline-block min-w-full py-2 align-middle md:px-6 lg:px-8">
      <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
        <table class="min-w-full divide-y divide-gray-300">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wide">Lead</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wide">Project</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wide">Status</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wide">Assigned To</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wide">Next Call</th>
              <th scope="col" class="relative px-6 py-3"><span class="sr-only">Actions</span></th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% if @leads.any? %>
              <% @leads.each do |lead| %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center">
                      <div class="flex-shrink-0 h-10 w-10">
                        <div class="h-10 w-10 rounded-full bg-blue-500 flex items-center justify-center">
                          <span class="text-white text-sm font-medium">
                            <%= lead.name&.first&.upcase || 'L' %>
                          </span>
                        </div>
                      </div>
                      <div class="ml-4">
                        <div class="text-sm font-medium text-gray-900"><%= lead.name %></div>
                        <div class="text-sm text-gray-500">
                          <%= lead.email %> â€¢ <%= lead.phone %>
                        </div>
                      </div>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= lead.project.name %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full 
                      <%= case lead.status.tag
                          when 'new' then 'bg-gray-100 text-gray-800'
                          when 'contacted' then 'bg-blue-100 text-blue-800'
                          when 'interested' then 'bg-green-100 text-green-800'
                          when 'not_interested' then 'bg-red-100 text-red-800'
                          when 'follow_up' then 'bg-yellow-100 text-yellow-800'
                          when 'converted' then 'bg-green-100 text-green-800'
                          when 'lost' then 'bg-red-100 text-red-800'
                          else 'bg-gray-100 text-gray-800'
                          end %>">
                      <%= lead.status.name %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= lead.user.name || lead.user.email %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= lead.ncd ? lead.ncd.strftime("%b %d, %Y") : '-' %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <%= link_to "View", company_lead_path(lead), class: "text-blue-600 hover:text-blue-900 mr-4" %>
                    <%= link_to "Edit", edit_company_lead_path(lead), class: "text-blue-600 hover:text-blue-900 mr-4" %>
                    <%= link_to "Delete", company_lead_path(lead), 
                          data: { "turbo-method": :delete, "turbo-confirm": "Are you sure?" }, 
                          class: "text-red-600 hover:text-red-900" %>
                  </td>
                </tr>
              <% end %>
            <% else %>
              <tr>
                <td colspan="6" class="px-6 py-12 text-center">
                  <div class="text-gray-500">
                    <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                    </svg>
                    <h3 class="mt-2 text-sm font-medium text-gray-900">No leads</h3>
                    <p class="mt-1 text-sm text-gray-500">Get started by creating your first lead.</p>
                    <div class="mt-6">
                      <%= link_to "Add lead", new_company_lead_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
                    </div>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      
      <!-- Pagination -->
      <% if @leads.respond_to?(:total_pages) && @leads.total_pages > 1 %>
        <div class="bg-white px-4 py-3 flex items-center justify-between border-t border-gray-200 sm:px-6">
          <div class="flex-1 flex justify-between sm:hidden">
            <!-- Mobile pagination -->
            <% if @leads.prev_page %>
              <%= link_to company_leads_path(params.permit!.merge(page: @leads.prev_page)), 
                    class: "relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" do %>
                Previous
              <% end %>
            <% else %>
              <span class="relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-300 bg-gray-50 cursor-not-allowed">
                Previous
              </span>
            <% end %>
            
            <% if @leads.next_page %>
              <%= link_to company_leads_path(params.permit!.merge(page: @leads.next_page)), 
                    class: "ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" do %>
                Next
              <% end %>
            <% else %>
              <span class="ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-300 bg-gray-50 cursor-not-allowed">
                Next
              </span>
            <% end %>
          </div>
          
          <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
            <div>
              <p class="text-sm text-gray-700">
                Showing
                <span class="font-medium"><%= @leads.offset_value + 1 %></span>
                to
                <span class="font-medium"><%= [@leads.offset_value + @leads.limit_value, @leads.total_count].min %></span>
                of
                <span class="font-medium"><%= @leads.total_count %></span>
                results
              </p>
            </div>
            <div>
              <!-- Desktop pagination -->
              <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px" aria-label="Pagination">
                <% if @leads.prev_page %>
                  <%= link_to company_leads_path(params.permit!.merge(page: @leads.prev_page)), 
                        class: "relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50 focus:z-10 focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500" do %>
                    <span class="sr-only">Previous</span>
                    <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
                    </svg>
                  <% end %>
                <% else %>
                  <span class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-gray-50 text-sm font-medium text-gray-300 cursor-not-allowed">
                    <span class="sr-only">Previous</span>
                    <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
                    </svg>
                  </span>
                <% end %>
                
                <!-- Page numbers -->
                <% page_range = if @leads.total_pages <= 7
                     (1..@leads.total_pages)
                   else
                     start_page = [@leads.current_page - 2, 1].max
                     end_page = [start_page + 4, @leads.total_pages].min
                     start_page = [end_page - 4, 1].max
                     (start_page..end_page)
                   end %>
                
                <% if page_range.first > 1 %>
                  <%= link_to company_leads_path(params.permit!.merge(page: 1)), 
                        class: "relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50 focus:z-10 focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500" do %>
                    1
                  <% end %>
                  <% if page_range.first > 2 %>
                    <span class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700">
                      ...
                    </span>
                  <% end %>
                <% end %>
                
                <% page_range.each do |page| %>
                  <% if page == @leads.current_page %>
                    <span class="z-10 bg-blue-50 border-blue-500 text-blue-600 relative inline-flex items-center px-4 py-2 border text-sm font-medium">
                      <%= page %>
                    </span>
                  <% else %>
                    <%= link_to company_leads_path(params.permit!.merge(page: page)), 
                          class: "relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50 focus:z-10 focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500" do %>
                      <%= page %>
                    <% end %>
                  <% end %>
                <% end %>
                
                <% if page_range.last < @leads.total_pages %>
                  <% if page_range.last < @leads.total_pages - 1 %>
                    <span class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700">
                      ...
                    </span>
                  <% end %>
                  <%= link_to company_leads_path(params.permit!.merge(page: @leads.total_pages)), 
                        class: "relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50 focus:z-10 focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500" do %>
                    <%= @leads.total_pages %>
                  <% end %>
                <% end %>
                
                <% if @leads.next_page %>
                  <%= link_to company_leads_path(params.permit!.merge(page: @leads.next_page)), 
                        class: "relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50 focus:z-10 focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500" do %>
                    <span class="sr-only">Next</span>
                    <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                    </svg>
                  <% end %>
                <% else %>
                  <span class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-gray-50 text-sm font-medium text-gray-300 cursor-not-allowed">
                    <span class="sr-only">Next</span>
                    <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                    </svg>
                  </span>
                <% end %>
              </nav>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Search Drawer Modal -->
<div data-search-drawer-target="overlay" 
     data-action="click->search-drawer#overlayClick"
     class="hidden fixed inset-0 z-50 overflow-hidden">
  <div class="absolute inset-0 bg-black bg-opacity-50 transition-opacity duration-300"></div>
  
  <!-- Drawer -->
  <div data-search-drawer-target="drawer" 
       class="fixed inset-y-0 right-0 w-1/2 min-w-96 bg-white shadow-xl transform translate-x-full transition-transform duration-300 ease-in-out flex flex-col">
    
    <!-- Drawer Header -->
    <div class="flex items-center justify-between p-8 border-b border-gray-200 flex-shrink-0">
      <div>
        <h2 class="text-xl font-semibold text-gray-900">Smart Search</h2>
        <p class="text-sm text-gray-600 mt-1">Filter leads using advanced criteria</p>
      </div>
      <button data-action="click->search-drawer#close" 
              class="text-gray-400 hover:text-gray-600 transition-colors p-2 rounded-lg hover:bg-gray-100">
        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>

    <!-- Search Form -->
    <div class="flex-1 overflow-y-auto p-8">
      <%= form_with url: company_leads_path, method: :get, local: true, 
            data: { search_drawer_target: "form" },
            class: "space-y-6" do |form| %>
        
        <!-- Basic Search Fields -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
          <!-- Name Search -->
          <div class="space-y-2">
            <%= form.label :search_name, "Name", class: "block text-sm font-semibold text-gray-700" %>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
              </div>
              <%= form.text_field :search_name, 
                    value: params[:search_name],
                    class: "block w-full pl-12 pr-4 py-3 border border-gray-300 rounded-2xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200",
                    placeholder: "Search by name..." %>
            </div>
          </div>

          <!-- Phone Search -->
          <div class="space-y-2">
            <%= form.label :search_phone, "Phone Number", class: "block text-sm font-semibold text-gray-700" %>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
              </div>
              <%= form.text_field :search_phone, 
                    value: params[:search_phone],
                    class: "block w-full pl-12 pr-4 py-3 border border-gray-300 rounded-2xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200",
                    placeholder: "Search by phone..." %>
            </div>
          </div>
        </div>

        <!-- Email Search -->
        <div class="space-y-2">
          <%= form.label :search_email, "Email", class: "block text-sm font-semibold text-gray-700" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"></path>
              </svg>
            </div>
            <%= form.email_field :search_email, 
                  value: params[:search_email],
                  class: "block w-full pl-12 pr-4 py-3 border border-gray-300 rounded-2xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200",
                  placeholder: "Search by email..." %>
          </div>
        </div>

        <!-- Dropdown Multiselects -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
          <!-- Projects Dropdown -->
          <div class="space-y-2">
            <%= form.label :search_project_ids, "Projects", class: "block text-sm font-semibold text-gray-700" %>
            <div data-controller="multiselect-dropdown" 
                 data-multiselect-dropdown-placeholder-value="Select projects..."
                 data-multiselect-dropdown-search-placeholder-value="Search projects..."
                 class="relative">
              
              <div data-action="click->multiselect-dropdown#toggle"
                   data-multiselect-dropdown-target="input"
                   class="block w-full px-4 py-3 border border-gray-300 rounded-2xl bg-white cursor-pointer focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 text-gray-500">
                Select projects...
              </div>

              <div data-multiselect-dropdown-target="dropdown" 
                   class="hidden absolute z-10 mt-1 w-full bg-white border border-gray-300 rounded-2xl shadow-lg">
                <div class="p-3 border-b border-gray-200">
                  <input data-multiselect-dropdown-target="searchInput"
                         data-action="input->multiselect-dropdown#search"
                         type="text" 
                         placeholder="Search projects..."
                         class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>
                <div data-multiselect-dropdown-target="options" class="max-h-48 overflow-y-auto p-2">
                  <% current_company.projects.order(:name).each do |project| %>
                    <div class="flex items-center p-2 hover:bg-gray-50 rounded-lg">
                      <%= check_box_tag "search_project_ids[]", 
                            project.id, 
                            params[:search_project_ids]&.include?(project.id.to_s),
                            data: { action: "change->multiselect-dropdown#toggleOption" },
                            class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded",
                            id: "project_#{project.id}" %>
                      <%= label_tag "project_#{project.id}", project.name, 
                            class: "ml-3 block text-sm text-gray-700 cursor-pointer flex-1" %>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>

          <!-- Status Dropdown -->
          <div class="space-y-2">
            <%= form.label :search_status_ids, "Status", class: "block text-sm font-semibold text-gray-700" %>
            <div data-controller="multiselect-dropdown" 
                 data-multiselect-dropdown-placeholder-value="Select statuses..."
                 data-multiselect-dropdown-search-placeholder-value="Search statuses..."
                 class="relative">
              
              <div data-action="click->multiselect-dropdown#toggle"
                   data-multiselect-dropdown-target="input"
                   class="block w-full px-4 py-3 border border-gray-300 rounded-2xl bg-white cursor-pointer focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 text-gray-500">
                Select statuses...
              </div>

              <div data-multiselect-dropdown-target="dropdown" 
                   class="hidden absolute z-10 mt-1 w-full bg-white border border-gray-300 rounded-2xl shadow-lg">
                <div data-multiselect-dropdown-target="options" class="max-h-48 overflow-y-auto p-2">
                  <% Status.order(:name).each do |status| %>
                    <div class="flex items-center p-2 hover:bg-gray-50 rounded-lg">
                      <%= check_box_tag "search_status_ids[]", 
                            status.id, 
                            params[:search_status_ids]&.include?(status.id.to_s),
                            data: { action: "change->multiselect-dropdown#toggleOption" },
                            class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded",
                            id: "status_#{status.id}" %>
                      <%= label_tag "status_#{status.id}", status.name, 
                            class: "ml-3 block text-sm text-gray-700 cursor-pointer flex-1" %>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>

          <!-- Users Dropdown -->
          <div class="space-y-2">
            <%= form.label :search_user_ids, "Assigned To", class: "block text-sm font-semibold text-gray-700" %>
            <div data-controller="multiselect-dropdown" 
                 data-multiselect-dropdown-placeholder-value="Select users..."
                 data-multiselect-dropdown-search-placeholder-value="Search users..."
                 class="relative">
              
              <div data-action="click->multiselect-dropdown#toggle"
                   data-multiselect-dropdown-target="input"
                   class="block w-full px-4 py-3 border border-gray-300 rounded-2xl bg-white cursor-pointer focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 text-gray-500">
                Select users...
              </div>

              <div data-multiselect-dropdown-target="dropdown" 
                   class="hidden absolute z-10 mt-1 w-full bg-white border border-gray-300 rounded-2xl shadow-lg">
                <div class="p-3 border-b border-gray-200">
                  <input data-multiselect-dropdown-target="searchInput"
                         data-action="input->multiselect-dropdown#search"
                         type="text" 
                         placeholder="Search users..."
                         class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>
                <div data-multiselect-dropdown-target="options" class="max-h-48 overflow-y-auto p-2">
                  <% current_company.users.order(:name).each do |user| %>
                    <div class="flex items-center p-2 hover:bg-gray-50 rounded-lg">
                      <%= check_box_tag "search_user_ids[]", 
                            user.id, 
                            params[:search_user_ids]&.include?(user.id.to_s),
                            data: { action: "change->multiselect-dropdown#toggleOption" },
                            class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded",
                            id: "user_#{user.id}" %>
                      <%= label_tag "user_#{user.id}", (user.name || user.email), 
                            class: "ml-3 block text-sm text-gray-700 cursor-pointer flex-1" %>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Date Range -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
          <div class="space-y-2">
            <%= form.label :search_ncd_from, "Next Call From", class: "block text-sm font-semibold text-gray-700" %>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
              </div>
              <%= form.datetime_local_field :search_ncd_from, 
                    value: params[:search_ncd_from],
                    class: "block w-full pl-12 pr-4 py-3 border border-gray-300 rounded-2xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200" %>
            </div>
          </div>
          
          <div class="space-y-2">
            <%= form.label :search_ncd_upto, "Next Call To", class: "block text-sm font-semibold text-gray-700" %>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
              </div>
              <%= form.datetime_local_field :search_ncd_upto, 
                    value: params[:search_ncd_upto],
                    class: "block w-full pl-12 pr-4 py-3 border border-gray-300 rounded-2xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200" %>
            </div>
          </div>
        </div>

        <!-- Comments Search -->
        <div class="space-y-2">
          <%= form.label :search_comment, "Comments", class: "block text-sm font-semibold text-gray-700" %>
          <%= form.text_area :search_comment, 
                value: params[:search_comment],
                rows: 3,
                class: "block w-full px-4 py-3 border border-gray-300 rounded-2xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 resize-none",
                placeholder: "Search in comments and notes..." %>
        </div>

      <% end %>
    </div>

    <!-- Drawer Footer -->
    <div class="border-t border-gray-200 p-8 bg-gray-50/80 backdrop-blur-sm flex-shrink-0">
      <div class="flex space-x-4">
        <button data-action="click->search-drawer#clearForm" 
                class="flex-1 inline-flex justify-center items-center px-6 py-3 border border-gray-300 text-base font-medium rounded-2xl text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200">
          <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
          </svg>
          Clear All
        </button>
        <button data-action="click->search-drawer#submitSearch" 
                class="flex-1 inline-flex justify-center items-center px-8 py-3 border border-transparent text-base font-semibold rounded-2xl text-white bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200 transform hover:scale-[1.02] active:scale-[0.98] shadow-lg shadow-blue-500/25">
          <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"></path>
          </svg>
          Apply Filters
        </button>
      </div>
    </div>
  </div>
</div>

</div>
