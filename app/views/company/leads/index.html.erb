<% content_for :page_title, "Leads Management" %>

<div data-controller="search-drawer action-cable" 
     data-action-cable-channel-value="LeadsChannel" 
     data-action-cable-company-id-value="<%= current_company.id %>">

<div class="sm:flex sm:items-center">
  <div class="sm:flex-auto">
    <div class="flex items-center space-x-3">
      <h1 class="text-xl font-semibold text-gray-900">Leads</h1>
      <% if @search_active %>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
          <svg class="mr-1 h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <% if @quick_search_query.present? %>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            <% else %>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"></path>
            <% end %>
          </svg>
          <%= @quick_search_query.present? ? "Quick Search" : "Filtered" %>
        </span>
      <% end %>
    </div>
    <p class="mt-2 text-sm text-gray-700">
      Manage your company's leads and track their progress.
      <% if @search_active %>
        <%= link_to "Clear all filters", company_leads_path, class: "text-blue-600 hover:text-blue-500 ml-2" %>
      <% end %>
    </p>
  </div>
  <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
    <div class="flex space-x-3">
      <button data-action="click->search-drawer#open" class="inline-flex items-center justify-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
        <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
        Smart Search
      </button>
      <%= link_to company_new_lead_import_path, class: "inline-flex items-center justify-center rounded-md border border-blue-300 bg-white px-4 py-2 text-sm font-medium text-blue-700 shadow-sm hover:bg-blue-50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" do %>
        <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"></path>
        </svg>
        Import CSV
      <% end %>
      <% if current_user.admin? %>
        <%= link_to company_leads_path(format: :csv, **request.query_parameters), 
              class: "inline-flex items-center justify-center rounded-md border border-green-300 bg-white px-4 py-2 text-sm font-medium text-green-700 shadow-sm hover:bg-green-50 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2",
              title: "Export leads to CSV (max 1000 records)" do %>
          <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          Export CSV
        <% end %>
      <% end %>
      <%= link_to "Add lead", new_company_lead_path, class: "inline-flex items-center justify-center rounded-md border border-transparent bg-blue-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 sm:w-auto" %>
    </div>
  </div>
</div>

<!-- Quick Search Bar (only show when smart search is not active) -->
<% unless @search_active && @quick_search_query.blank? %>
  <div class="mt-6 mb-4">
    <%= form_with url: company_leads_path, method: :get, local: true, class: "max-w-lg" do |form| %>
      <div class="flex items-center gap-4">
        <label class="text-sm text-gray-700 font-semibold whitespace-nowrap">Quick Search:</label>
        <div class="flex flex-1 rounded-xl shadow-md border border-gray-200">
          <%= form.text_field :quick_search, 
                value: @quick_search_query,
                class: "block flex-1 px-5 py-3.5 border-0 rounded-l-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-0 text-sm bg-white",
                placeholder: "Search by name, phone, or email..." %>
          <button type="submit" class="relative inline-flex items-center justify-center px-6 py-3.5 bg-gradient-to-r from-blue-600 to-blue-700 text-sm font-semibold text-white rounded-r-xl hover:from-blue-700 hover:to-blue-800 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-0 transition-all duration-200 transform hover:scale-[1.02] active:scale-[0.98]">
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
          </button>
        </div>
      </div>
    <% end %>
  </div>
<% end %>

<!-- Quick Filter Status Cards (only show when no filters are applied) -->
<% unless @search_active %>
  <div class="mt-6 mb-6">
    <div class="flex flex-wrap gap-2">
      <% Status.order(:name).each do |status| %>
        <% 
          # Define colors for each status
          card_colors = case status.tag
          when 'new'
            'bg-blue-100 hover:bg-blue-200 text-blue-700 border-blue-300'
          when 'hot'
            'bg-green-100 hover:bg-green-200 text-green-700 border-green-300'
          when 'dead'
            'bg-red-100 hover:bg-red-200 text-red-700 border-red-300'
          when 'attempted'
            'bg-gray-100 hover:bg-gray-200 text-gray-700 border-gray-300'
          when 'cbt'
            'bg-lime-100 hover:bg-teal-200 text-teal-700 border-teal-300'
          else
            'bg-gray-100 hover:bg-gray-200 text-gray-700 border-gray-300'
          end
          
          lead_count = Lead.accessible_by(current_user).where(status: status).count
        %>
        
        <%= link_to company_leads_path(search_status_ids: [status.id]), 
              class: "inline-flex items-center px-3 py-1.5 rounded-full text-xs font-medium border #{card_colors} transition-all duration-200 hover:shadow-sm transform hover:scale-105 active:scale-95" do %>
          <%= status.name %>
          <span class="ml-2 px-1.5 py-0.5 bg-white/50 rounded-full text-xs font-semibold">
            <%= lead_count %>
          </span>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>

<div class="mt-8 flex flex-col">
  <div class="-my-2 -mx-4 overflow-x-auto sm:-mx-6 lg:-mx-8" 
       data-controller="bulk-selector" 
       data-bulk-selector-is-admin-value="<%= current_user.admin? %>">

    <!-- Bulk Update Form (Admin Only) -->
    <% if current_user.admin? %>
      <div data-bulk-selector-target="bulkForm" class="hidden bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6 mx-4 sm:mx-6 lg:mx-8">
        <%= form_with url: bulk_update_company_leads_path, method: :patch, local: true, class: "flex items-center justify-between" do |form| %>
          <div class="flex items-center space-x-4">
            <div class="flex items-center">
              <svg class="h-5 w-5 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span class="text-sm font-medium text-blue-900">
                <span data-bulk-selector-target="selectedCount">0</span> lead(s) selected
              </span>
            </div>
            
            <button type="button" 
                    data-bulk-selector-target="selectAllButton"
                    data-action="click->bulk-selector#selectAll"
                    class="hidden text-sm text-blue-600 hover:text-blue-800 font-medium">
              Select All on Page
            </button>
          </div>

          <div class="flex items-center space-x-4">
            <!-- Status Update -->
            <div class="flex items-center space-x-2">
              <%= form.label :status_id, "Status:", class: "text-sm font-medium text-gray-700" %>
              <%= form.select :status_id, 
                    options_from_collection_for_select(Status.order(:name), :id, :name),
                    { prompt: "Change status..." },
                    { class: "py-2 px-3 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-500" } %>
            </div>

            <!-- Assign To Update -->
            <div class="flex items-center space-x-2">
              <%= form.label :user_id, "Assign to:", class: "text-sm font-medium text-gray-700" %>
              <%= form.select :user_id, 
                    options_from_collection_for_select(current_company.users.joins(:role).where(role: { tag: ['admin', 'manager', 'executive'] }).order(:name), :id, ->(user) { user.name || user.email }),
                    { prompt: "Assign to..." },
                    { class: "py-2 px-3 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-500" } %>
            </div>

            <!-- Delete NCD Checkbox -->
            <div class="flex items-center space-x-2">
              <%= form.check_box :delete_ncd, { class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" }, "1", "0" %>
              <%= form.label :delete_ncd, "Delete NCD", class: "text-sm font-medium text-gray-700" %>
            </div>

            <!-- Delete Comments Checkbox -->
            <div class="flex items-center space-x-2">
              <%= form.check_box :delete_comments, { class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" }, "1", "0" %>
              <%= form.label :delete_comments, "Delete Comments", class: "text-sm font-medium text-gray-700" %>
            </div>

            <!-- Actions -->
            <div class="flex items-center space-x-2">
              <%= form.submit "Update Selected", 
                    data: { "turbo-confirm": "Are you sure? This action cannot be reversed and will update all selected leads immediately." },
                    class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-all duration-200" %>
              
              <button type="button" 
                      data-action="click->bulk-selector#clearSelection"
                      class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-all duration-200">
                Clear
              </button>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
    <div class="inline-block min-w-full py-2 align-middle md:px-6 lg:px-8">
      <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
        <table class="min-w-full divide-y divide-gray-300">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wide">Lead</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wide">Project</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wide">Status</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wide">Assigned To</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase 
              tracking-wide">F/U Date</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wide">Remarks</th>
              <th scope="col" class="relative px-6 py-3"><span class="sr-only">Actions</span></th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% if @leads.any? %>
              <% @leads.each do |lead| %>
                <tr id="lead-row-<%= lead.id %>">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center">
                      <div class="flex-shrink-0 h-10 w-10">
                        <% if current_user.admin? %>
                          <div data-bulk-selector-target="leadCheckbox"
                               data-lead-id="<%= lead.id %>"
                               data-action="click->bulk-selector#toggleLead"
                               class="h-10 w-10 rounded-full bg-blue-500 flex items-center justify-center cursor-pointer hover:bg-blue-600 transition-all duration-200 relative">
                            <!-- Initials (shown when not selected) -->
                            <span class="lead-initials text-white text-sm font-medium transition-opacity duration-200">
                              <%= lead.name&.first&.upcase || 'L' %>
                            </span>
                            <!-- Checkmark (shown when selected) -->
                            <svg class="lead-checkmark h-6 w-6 text-white opacity-0 absolute transition-opacity duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path>
                            </svg>
                            <input type="checkbox" class="absolute inset-0 opacity-0 cursor-pointer">
                          </div>
                        <% else %>
                          <div class="h-10 w-10 rounded-full bg-blue-500 flex items-center justify-center">
                            <span class="text-white text-sm font-medium">
                              <%= lead.name&.first&.upcase || 'L' %>
                            </span>
                          </div>
                        <% end %>
                      </div>
                      <div class="ml-4">
                        <div class="text-sm font-medium text-blue-600 hover:text-blue-800 cursor-pointer transition-colors duration-200" 
                             data-controller="lead-opener"
                             data-action="click->lead-opener#openLead"
                             data-lead-opener-url-value="<%= company_lead_path(lead) %>"
                             data-lead-opener-name-value="<%= lead.name %>">
                          <%= lead.name %>
                          <% if lead.code.present? %>
                            <div class="text-xs text-gray-500 mt-1">
                              Code: <%= lead.code %>
                            </div>
                          <% end %>
                        </div>
                      </div>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <button data-controller="project-drawer"
                            data-project-drawer-url-value="<%= company_project_path(lead.project) %>"
                            data-project-drawer-name-value="<%= lead.project.name %>"
                            data-action="click->project-drawer#openProject"
                            class="text-blue-600 hover:text-blue-800 cursor-pointer font-medium transition-colors duration-200">
                      <%= lead.project.name %>
                    </button>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full 
                      <%= case lead.status.tag
                          when 'new' then 'bg-gray-100 text-gray-800'
                          when 'contacted' then 'bg-blue-100 text-blue-800'
                          when 'interested' then 'bg-green-100 text-green-800'
                          when 'not_interested' then 'bg-red-100 text-red-800'
                          when 'follow_up' then 'bg-yellow-100 text-yellow-800'
                          when 'converted' then 'bg-green-100 text-green-800'
                          when 'lost' then 'bg-red-100 text-red-800'
                          else 'bg-gray-100 text-gray-800'
                          end %>">
                      <%= lead.status.name %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= lead.user.name || lead.user.email %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= lead.ncd ? lead.ncd.strftime("%b %d, %Y") : '-' %>
                  </td>
                  <td class="px-6 py-4 text-sm text-gray-500">
                    <div data-controller="comment-display" 
                         data-comment-display-full-comment-value="<%= lead.comment&.gsub('"', '&quot;') %>"
                         data-comment-display-lead-id-value="<%= lead.id %>">
                      <div data-comment-display-target="truncated" class="comment-content">
                        <% if lead.comment.present? %>
                          <% truncated_comment = lead.comment.length > 100 ? lead.comment[0..100] + "..." : lead.comment %>
                          <%= simple_format(truncated_comment, {}, wrapper_tag: "div") %>
                        <% else %>
                          <span class="text-gray-400 italic">No comments</span>
                        <% end %>
                      </div>
                      
                      <% if lead.comment.present? && lead.comment.length > 100 %>
                        <div class="mt-1 flex space-x-2">
                          <button data-action="click->comment-display#toggleExpanded" 
                                  data-comment-display-target="toggleButton"
                                  class="text-xs text-blue-600 hover:text-blue-800 font-medium">
                            <span data-comment-display-target="toggleText">Show more</span>
                          </button>
                          
                          <% if lead.comment.length > 500 %>
                            <button data-action="click->comment-display#openModal" 
                                    class="text-xs text-purple-600 hover:text-purple-800 font-medium">
                              View full
                            </button>
                          <% end %>
                        </div>
                      <% end %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <div class="flex items-center justify-end space-x-2">
                      <% unless current_user.admin? %>
                        <button data-controller="call-modal"
                                data-call-modal-url-value="<%= call_company_lead_path(lead) %>"
                                class="inline-flex items-center justify-center w-8 h-8 text-blue-600 hover:text-blue-900 bg-transparent border-none cursor-pointer rounded-full hover:bg-blue-50 transition-all duration-200"
                                title="Log Call">
                          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                          </svg>
                        </button>
                      <% end %>
                      <% if current_user.admin? %>
                        <%= link_to company_lead_path(lead), 
                            data: { "turbo-method": :delete, "turbo-confirm": "Are you sure you want to delete this lead?" }, 
                            class: "inline-flex items-center justify-center w-8 h-8 text-red-600 hover:text-red-900 rounded-full hover:bg-red-50 transition-all duration-200",
                            title: "Delete Lead" do %>
                          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                          </svg>
                        <% end %>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            <% else %>
              <tr>
                <td colspan="6" class="px-6 py-12 text-center">
                  <div class="text-gray-500">
                    <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                    </svg>
                    <h3 class="mt-2 text-sm font-medium text-gray-900">No leads</h3>
                    <p class="mt-1 text-sm text-gray-500">Get started by creating your first lead.</p>
                    <div class="mt-6">
                      <%= link_to "Add lead", new_company_lead_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
                    </div>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      
      <!-- Pagination -->
      <% if @leads.respond_to?(:total_pages) && @leads.total_pages > 1 %>
        <div class="bg-white px-4 py-3 flex items-center justify-between border-t border-gray-200 sm:px-6">
          <div class="flex-1 flex justify-between sm:hidden">
            <!-- Mobile pagination -->
            <% if @leads.prev_page %>
              <%= link_to company_leads_path(params.permit!.merge(page: @leads.prev_page)), 
                    class: "relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" do %>
                Previous
              <% end %>
            <% else %>
              <span class="relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-300 bg-gray-50 cursor-not-allowed">
                Previous
              </span>
            <% end %>
            
            <% if @leads.next_page %>
              <%= link_to company_leads_path(params.permit!.merge(page: @leads.next_page)), 
                    class: "ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" do %>
                Next
              <% end %>
            <% else %>
              <span class="ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-300 bg-gray-50 cursor-not-allowed">
                Next
              </span>
            <% end %>
          </div>
          
          <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
            <div>
              <p class="text-sm text-gray-700">
                Showing
                <span class="font-medium"><%= @leads.offset_value + 1 %></span>
                to
                <span class="font-medium"><%= [@leads.offset_value + @leads.limit_value, @leads.total_count].min %></span>
                of
                <span class="font-medium"><%= @leads.total_count %></span>
                results
              </p>
            </div>
            <div>
              <!-- Desktop pagination -->
              <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px" aria-label="Pagination">
                <% if @leads.prev_page %>
                  <%= link_to company_leads_path(params.permit!.merge(page: @leads.prev_page)), 
                        class: "relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50 focus:z-10 focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500" do %>
                    <span class="sr-only">Previous</span>
                    <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
                    </svg>
                  <% end %>
                <% else %>
                  <span class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-gray-50 text-sm font-medium text-gray-300 cursor-not-allowed">
                    <span class="sr-only">Previous</span>
