<% content_for :page_title, "Edit Lead" %>

<div class="max-w-2xl mx-auto">
  <div class="md:grid md:grid-cols-3 md:gap-6">
    <div class="md:col-span-1">
      <div class="px-4 sm:px-0">
        <h3 class="text-lg font-medium leading-6 text-gray-900">Edit Lead</h3>
        <p class="mt-1 text-sm text-gray-600">Update lead information.</p>
      </div>
    </div>
    <div class="mt-5 md:mt-0 md:col-span-2">
      <%= form_with(model: [:company, @lead], local: true, class: "shadow sm:rounded-md sm:overflow-hidden") do |form| %>
        <div class="px-4 py-5 bg-white space-y-6 sm:p-6">
          <% if @lead.errors.any? %>
            <div class="rounded-md bg-red-50 p-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-red-800">
                    <%= pluralize(@lead.errors.count, "error") %> prohibited this lead from being saved:
                  </h3>
                  <div class="mt-2 text-sm text-red-700">
                    <ul class="list-disc pl-5 space-y-1">
                      <% @lead.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          <% end %>

          <div class="grid grid-cols-6 gap-6">
            <div class="col-span-6 sm:col-span-3">
              <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
              <%= form.text_field :name, class: "mt-1 focus:ring-blue-500 focus:border-blue-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
            </div>

            <div class="col-span-6 sm:col-span-3">
              <%= form.label :phone, class: "block text-sm font-medium text-gray-700" %>
              <%= form.text_field :phone, class: "mt-1 focus:ring-blue-500 focus:border-blue-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
            </div>

            <div class="col-span-6">
              <%= form.label :email, class: "block text-sm font-medium text-gray-700" %>
              <%= form.email_field :email, class: "mt-1 focus:ring-blue-500 focus:border-blue-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
            </div>

            <div class="col-span-6 sm:col-span-3">
              <%= form.label :project_id, "Project", class: "block text-sm font-medium text-gray-700" %>
              <%= form.select :project_id, options_from_collection_for_select(@projects, :id, :name, @lead.project_id), 
                    { prompt: "Select a project" }, 
                    { class: "mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" } %>
            </div>

            <div class="col-span-6 sm:col-span-3">
              <%= form.label :status_id, "Status", class: "block text-sm font-medium text-gray-700" %>
              <%= form.select :status_id, options_from_collection_for_select(@statuses, :id, :name, @lead.status_id), 
                    { prompt: "Select a status" }, 
                    { class: "mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" } %>
            </div>

            <div class="col-span-6 sm:col-span-3">
              <%= form.label :user_id, "Assign to", class: "block text-sm font-medium text-gray-700" %>
              <%= form.select :user_id, options_from_collection_for_select(@users, :id, ->(user) { user.name || user.email }, @lead.user_id), 
                    { prompt: "Select a user" }, 
                    { class: "mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" } %>
            </div>

            <div class="col-span-6 sm:col-span-3">
              <%= form.label :ncd, "Next call date", class: "block text-sm font-medium text-gray-700" %>
              <%= form.datetime_local_field :ncd, value: (@lead.ncd ? @lead.ncd.strftime("%Y-%m-%dT%H:%M") : nil), class: "mt-1 focus:ring-blue-500 focus:border-blue-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
            </div>

            <div class="col-span-6">
              <%= form.label :comment, "Comments", class: "block text-sm font-medium text-gray-700" %>
              <%= form.text_area :comment, rows: 3, class: "mt-1 focus:ring-blue-500 focus:border-blue-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md", placeholder: "Any notes or comments about this lead..." %>
            </div>
          </div>
        </div>
        <div class="px-4 py-3 bg-gray-50 text-right sm:px-6 space-x-2">
          <%= link_to "Cancel", company_lead_path(@lead), class: "inline-flex justify-center py-2 px-4 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
          <%= form.submit "Update Lead", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
