<% content_for :page_title, "Edit Lead" %>

<div class="min-h-full flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-3xl w-full space-y-8">
    <!-- Header Section -->
    <div class="text-center">
      <div class="mx-auto h-16 w-16 flex items-center justify-center rounded-full bg-gradient-to-r from-blue-500 to-indigo-600 shadow-lg">
        <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
        </svg>
      </div>
      <h2 class="mt-6 text-3xl font-bold text-gray-900">Edit Lead</h2>
      <p class="mt-2 text-sm text-gray-600">Update lead information and details</p>
    </div>

    <!-- Form Card -->
    <div class="bg-white/80 backdrop-blur-sm shadow-2xl rounded-3xl border border-gray-200/50">
      <%= form_with(model: [:company, @lead], local: true, class: "p-8 space-y-8") do |form| %>
        <!-- Error Messages -->
        <% if @lead.errors.any? %>
          <div class="rounded-2xl bg-red-50/80 backdrop-blur-sm border border-red-200 p-6">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-6 w-6 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-4">
                <h3 class="text-base font-semibold text-red-800">
                  Please fix the following <%= pluralize(@lead.errors.count, "error") %>:
                </h3>
                <ul class="mt-3 text-sm text-red-700 space-y-2">
                  <% @lead.errors.full_messages.each do |message| %>
                    <li class="flex items-center">
                      <span class="w-1.5 h-1.5 bg-red-400 rounded-full mr-3"></span>
                      <%= message %>
                    </li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Form Fields -->
        <div class="space-y-8">
          <!-- Name and Phone Row -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div>
              <%= form.label :name, class: "block text-base font-semibold text-gray-700 mb-3" do %>
                <span class="flex items-center">
                  <svg class="h-5 w-5 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                  Lead Name
                </span>
              <% end %>
              <%= form.text_field :name, 
                    class: "w-full py-4 px-6 border border-gray-300 rounded-2xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 text-lg bg-white/50 backdrop-blur-sm", 
                    placeholder: "Enter lead name..." %>
            </div>

            <div>
              <%= form.label :phone, class: "block text-base font-semibold text-gray-700 mb-3" do %>
                <span class="flex items-center">
                  <svg class="h-5 w-5 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                  </svg>
                  Phone Number
                </span>
              <% end %>
              <%= form.text_field :phone, 
                    class: "w-full py-4 px-6 border border-gray-300 rounded-2xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 text-lg bg-white/50 backdrop-blur-sm", 
                    placeholder: "Enter phone number..." %>
            </div>
          </div>

          <!-- Email -->
          <div>
            <%= form.label :email, class: "block text-base font-semibold text-gray-700 mb-3" do %>
              <span class="flex items-center">
                <svg class="h-5 w-5 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"></path>
                </svg>
                Email Address
              </span>
            <% end %>
            <%= form.email_field :email, 
                  class: "w-full py-4 px-6 border border-gray-300 rounded-2xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 text-lg bg-white/50 backdrop-blur-sm", 
                  placeholder: "Enter email address..." %>
          </div>

          <!-- Project and Status Row -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div>
              <%= form.label :project_id, class: "block text-base font-semibold text-gray-700 mb-3" do %>
                <span class="flex items-center">
                  <svg class="h-5 w-5 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                  </svg>
                  Project
                </span>
              <% end %>
              <%= form.select :project_id, 
                    options_from_collection_for_select(@projects, :id, :name, @lead.project_id), 
                    { prompt: "Select a project..." }, 
                    { class: "w-full py-4 px-6 border border-gray-300 rounded-2xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 text-lg bg-white/50 backdrop-blur-sm" } %>
            </div>

            <div>
              <%= form.label :status_id, class: "block text-base font-semibold text-gray-700 mb-3" do %>
                <span class="flex items-center">
                  <svg class="h-5 w-5 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  Status
                </span>
              <% end %>
              <%= form.select :status_id, 
                    options_from_collection_for_select(@statuses, :id, :name, @lead.status_id), 
                    { prompt: "Select a status..." }, 
                    { class: "w-full py-4 px-6 border border-gray-300 rounded-2xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 text-lg bg-white/50 backdrop-blur-sm" } %>
            </div>
          </div>

          <!-- Assigned To and Next Call Date Row -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div>
              <%= form.label :user_id, class: "block text-base font-semibold text-gray-700 mb-3" do %>
                <span class="flex items-center">
                  <svg class="h-5 w-5 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
                  </svg>
                  Assign To
                </span>
              <% end %>
              <%= form.select :user_id, 
                    options_from_collection_for_select(@users, :id, ->(user) { user.name || user.email }, @lead.user_id), 
                    { prompt: "Select a user..." }, 
                    { class: "w-full py-4 px-6 border border-gray-300 rounded-2xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 text-lg bg-white/50 backdrop-blur-sm" } %>
            </div>

            <div>
              <%= form.label :ncd, class: "block text-base font-semibold text-gray-700 mb-3" do %>
                <span class="flex items-center">
                  <svg class="h-5 w-5 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                  Next Call Date
                </span>
              <% end %>
              <%= form.datetime_local_field :ncd, 
                    value: (@lead.ncd ? @lead.ncd.strftime("%Y-%m-%dT%H:%M") : nil), 
                    class: "w-full py-4 px-6 border border-gray-300 rounded-2xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 text-lg bg-white/50 backdrop-blur-sm" %>
            </div>
          </div>

          <!-- Comment -->
          <div>
            <%= form.label :comment, class: "block text-base font-semibold text-gray-700 mb-3" do %>
              <span class="flex items-center">
                <svg class="h-5 w-5 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10m0 0V6a2 2 0 00-2-2H9a2 2 0 00-2 2v2m10 0v10a2 2 0 01-2 2H9a2 2 0 01-2-2V8m10 0H7"></path>
                </svg>
                Comments
              </span>
            <% end %>
            <%= form.text_area :comment, 
                  rows: 4,
                  class: "w-full py-4 px-6 border border-gray-300 rounded-2xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 text-lg bg-white/50 backdrop-blur-sm resize-none",
                  placeholder: "Add notes or comments about this lead..." %>
          </div>
        </div>

        <!-- Form Actions -->
        <div class="bg-gray-50/80 backdrop-blur-sm px-8 py-6 -mx-8 -mb-8 rounded-b-3xl flex justify-between items-center">
          <%= link_to company_lead_path(@lead), 
                class: "inline-flex items-center px-6 py-3 border border-gray-300 text-base font-medium rounded-2xl text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200" do %>
            <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Cancel
          <% end %>
          
          <%= form.submit "Update Lead", 
                class: "inline-flex items-center px-8 py-3 border border-transparent text-base font-medium rounded-2xl text-white bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200 shadow-lg hover:shadow-xl" %>
        </div>
      <% end %>
    </div>

    <!-- Help Text -->
    <div class="text-center">
      <p class="text-sm text-gray-500">
        Need help? Contact your system administrator for assistance.
      </p>
    </div>
  </div>
</div>
