<% content_for :page_title, "New Lead" %>

<div class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-blue-100 py-12">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-12">
      <h1 class="text-3xl font-bold text-gray-900 mb-4">Add New Lead</h1>
      <p class="text-lg text-gray-600">Capture a new lead and add them to your pipeline</p>
    </div>

    <!-- Form Card -->
    <div class="bg-white/80 backdrop-blur-sm rounded-3xl shadow-xl shadow-gray-200/50 border border-white/20 overflow-hidden">
      <%= form_with(model: [:company, @lead], local: true, class: "space-y-0") do |form| %>
        
        <!-- Error Messages -->
        <% if @lead.errors.any? %>
          <div class="p-8 pb-0">
            <div class="rounded-2xl bg-red-50 border border-red-200 p-6">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-6 w-6 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="ml-4">
                  <h3 class="text-base font-semibold text-red-800 mb-2">
                    <%= pluralize(@lead.errors.count, "error") %> prohibited this lead from being saved:
                  </h3>
                  <ul class="text-sm text-red-700 space-y-1">
                    <% @lead.errors.full_messages.each do |message| %>
                      <li class="flex items-center">
                        <span class="w-1.5 h-1.5 bg-red-400 rounded-full mr-2"></span>
                        <%= message %>
                      </li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Lead Limit Warning -->
        <% if current_company.lead_limit.present? %>
          <div class="p-8 pb-0">
            <% if current_company.lead_limit_reached? %>
              <div class="rounded-2xl bg-red-50 border border-red-200 p-6">
                <div class="flex">
                  <div class="flex-shrink-0">
                    <svg class="h-6 w-6 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                    </svg>
                  </div>
                  <div class="ml-4">
                    <h4 class="text-base font-semibold text-red-800">Lead Limit Reached</h4>
                    <p class="text-sm text-red-700 mt-1">
                      Your company has reached its lead limit of <%= current_company.lead_limit %>. 
                      You cannot create new leads until some are removed or the limit is increased.
                    </p>
                  </div>
                </div>
              </div>
            <% elsif current_company.lead_limit_percentage >= 75 %>
              <div class="rounded-2xl bg-yellow-50 border border-yellow-200 p-6">
                <div class="flex">
                  <div class="flex-shrink-0">
                    <svg class="h-6 w-6 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                    </svg>
                  </div>
                  <div class="ml-4">
                    <h4 class="text-base font-semibold text-yellow-800">Approaching Lead Limit</h4>
                    <p class="text-sm text-yellow-700 mt-1">
                      You have <%= current_company.leads_remaining %> leads remaining out of <%= current_company.lead_limit %> 
                      (<%= current_company.lead_limit_percentage %>% used).
                    </p>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>

        <!-- Form Fields -->
        <div class="p-8 space-y-10">
          
          <!-- Contact Information Section -->
          <div class="space-y-6">
            <div class="border-b border-gray-200 pb-4">
              <h3 class="text-lg font-semibold text-gray-900">Contact Information</h3>
              <p class="text-sm text-gray-600 mt-1">Basic details about the lead</p>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
              <div class="space-y-2">
                <%= form.label :name, "Full Name", class: "block text-sm font-semibold text-gray-700" %>
                <div class="relative">
                  <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                    <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                  </div>
                  <%= form.text_field :name, 
                        class: "block w-full pl-12 pr-4 py-4 text-gray-900 placeholder-gray-500 bg-white border border-gray-200 rounded-2xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 text-base",
                        placeholder: "Enter full name" %>
                </div>
              </div>

              <div class="space-y-2">
                <%= form.label :phone, "Phone Number", class: "block text-sm font-semibold text-gray-700" %>
                <div class="relative">
                  <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                    <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                    </svg>
                  </div>
                  <%= form.text_field :phone, 
                        class: "block w-full pl-12 pr-4 py-4 text-gray-900 placeholder-gray-500 bg-white border border-gray-200 rounded-2xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 text-base",
                        placeholder: "Enter phone number" %>
                </div>
              </div>

              <div class="space-y-2">
                <%= form.label :email, "Email Address", class: "block text-sm font-semibold text-gray-700" %>
                <div class="relative">
                  <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                    <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"></path>
                    </svg>
                  </div>
                  <%= form.email_field :email, 
                        class: "block w-full pl-12 pr-4 py-4 text-gray-900 placeholder-gray-500 bg-white border border-gray-200 rounded-2xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 text-base",
                        placeholder: "Enter email address" %>
                </div>
              </div>
            </div>
          </div>

          <!-- Lead Management Section -->
          <div class="space-y-6">
            <div class="border-b border-gray-200 pb-4">
              <h3 class="text-lg font-semibold text-gray-900">Lead Management</h3>
              <p class="text-sm text-gray-600 mt-1">Project assignment and status tracking</p>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
              <div class="space-y-2">
                <%= form.label :project_id, "Project", class: "block text-sm font-semibold text-gray-700" %>
                <%= form.select :project_id, 
                      options_from_collection_for_select(@projects, :id, :name, @lead.project_id), 
                      { prompt: "Select a project" }, 
                      { class: "block w-full py-4 px-4 text-gray-900 bg-white border border-gray-200 rounded-2xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 text-base" } %>
              </div>

              <div class="space-y-2">
                <%= form.label :status_id, "Status", class: "block text-sm font-semibold text-gray-700" %>
                <%= form.select :status_id, 
                      options_from_collection_for_select(@statuses, :id, :name, @lead.status_id), 
                      { prompt: "Select a status" }, 
                      { class: "block w-full py-4 px-4 text-gray-900 bg-white border border-gray-200 rounded-2xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 text-base" } %>
              </div>

              <div class="space-y-2">
                <%= form.label :user_id, "Assign to", class: "block text-sm font-semibold text-gray-700" %>
                <%= form.select :user_id, 
                      options_from_collection_for_select(@users, :id, ->(user) { user.name || user.email }, @lead.user_id), 
                      { prompt: "Select a team member" }, 
                      { class: "block w-full py-4 px-4 text-gray-900 bg-white border border-gray-200 rounded-2xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 text-base" } %>
              </div>
            </div>
          </div>

          <!-- Follow-up & Notes Section -->
          <div class="space-y-6">
            <div class="border-b border-gray-200 pb-4">
              <h3 class="text-lg font-semibold text-gray-900">Follow-up & Notes</h3>
              <p class="text-sm text-gray-600 mt-1">Schedule next contact and add relevant notes</p>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
              <div class="space-y-2">
                <%= form.label :ncd, "Next Call Date & Time", class: "block text-sm font-semibold text-gray-700" %>
                <div class="relative">
                  <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                    <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                  </div>
                  <%= form.datetime_local_field :ncd, 
                        class: "block w-full pl-12 pr-4 py-4 text-gray-900 bg-white border border-gray-200 rounded-2xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 text-base" %>
                </div>
              </div>

              <div class="space-y-2 lg:row-span-2">
                <%= form.label :comment, "Notes & Comments", class: "block text-sm font-semibold text-gray-700" %>
                <%= form.text_area :comment, 
                      rows: 6, 
                      class: "block w-full px-4 py-4 text-gray-900 placeholder-gray-500 bg-white border border-gray-200 rounded-2xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 text-base resize-none",
                      placeholder: "Add any notes or comments about this lead..." %>
              </div>
            </div>
          </div>
        </div>

        <!-- Form Actions -->
        <div class="bg-gray-50/80 backdrop-blur-sm px-8 py-6 flex justify-end space-x-4">
          <%= link_to "Cancel", company_leads_path, 
                class: "inline-flex items-center px-6 py-3 border border-gray-300 text-base font-medium rounded-2xl text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200" %>
          <%= form.submit "Create Lead", 
                class: "inline-flex items-center px-8 py-3 border border-transparent text-base font-semibold rounded-2xl text-white bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200 transform hover:scale-[1.02] active:scale-[0.98] shadow-lg shadow-blue-500/25" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
