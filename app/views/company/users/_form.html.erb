<div class="min-h-full flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-2xl w-full space-y-8">
    <!-- Header Section -->
    <div class="text-center">
      <div class="mx-auto h-16 w-16 flex items-center justify-center rounded-full bg-gradient-to-r from-blue-500 to-indigo-600 shadow-lg">
        <% if @user.persisted? %>
          <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
        <% else %>
          <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
          </svg>
        <% end %>
      </div>
      <h2 class="mt-6 text-3xl font-bold text-gray-900">
        <%= @user.persisted? ? "Edit Team Member" : "Add Team Member" %>
      </h2>
      <p class="mt-2 text-sm text-gray-600">
        <%= @user.persisted? ? "Update team member information and settings" : "Create a new user account for your company" %>
      </p>
    </div>

    <!-- Form Card -->
    <div class="bg-white/80 backdrop-blur-sm shadow-2xl rounded-3xl border border-gray-200/50">
      <%= form_with(model: [:company, @user], local: true, class: "p-8 space-y-8") do |form| %>
        <!-- Error Messages -->
        <% if @user.errors.any? %>
          <div class="rounded-2xl bg-red-50/80 backdrop-blur-sm border border-red-200 p-6">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-6 w-6 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-4">
                <h3 class="text-base font-semibold text-red-800">
                  Please fix the following <%= pluralize(@user.errors.count, "error") %>:
                </h3>
                <ul class="mt-3 text-sm text-red-700 space-y-2">
                  <% @user.errors.full_messages.each do |message| %>
                    <li class="flex items-center">
                      <span class="w-1.5 h-1.5 bg-red-400 rounded-full mr-3"></span>
                      <%= message %>
                    </li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Form Fields -->
        <div class="space-y-8">
          <!-- Name and Phone Row -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div>
              <%= form.label :name, class: "block text-base font-semibold text-gray-700 mb-3" do %>
                <span class="flex items-center">
                  <svg class="h-5 w-5 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                  Full Name
                </span>
              <% end %>
              <%= form.text_field :name, 
                    class: "w-full py-4 px-6 border border-gray-300 rounded-2xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 text-lg bg-white/50 backdrop-blur-sm", 
                    placeholder: "Enter full name..." %>
            </div>

            <div>
              <%= form.label :phone, class: "block text-base font-semibold text-gray-700 mb-3" do %>
                <span class="flex items-center">
                  <svg class="h-5 w-5 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                  </svg>
                  Phone Number
                </span>
              <% end %>
              <%= form.text_field :phone, 
                    class: "w-full py-4 px-6 border border-gray-300 rounded-2xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 text-lg bg-white/50 backdrop-blur-sm", 
                    placeholder: "Enter phone number..." %>
            </div>
          </div>

          <!-- Email -->
          <div>
            <%= form.label :email, class: "block text-base font-semibold text-gray-700 mb-3" do %>
              <span class="flex items-center">
                <svg class="h-5 w-5 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"></path>
                </svg>
                Email Address
              </span>
            <% end %>
            <%= form.email_field :email, 
                  class: "w-full py-4 px-6 border border-gray-300 rounded-2xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 text-lg bg-white/50 backdrop-blur-sm", 
                  placeholder: "Enter email address..." %>
          </div>

          <!-- Assignee Email -->
          <div>
            <%= form.label :assignee_email, class: "block text-base font-semibold text-gray-700 mb-3" do %>
              <span class="flex items-center">
                <svg class="h-5 w-5 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                CRM Assignee Email
              </span>
            <% end %>
            <%= form.email_field :assignee_email, 
                  class: "w-full py-4 px-6 border border-gray-300 rounded-2xl focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all duration-200 text-lg bg-white/50 backdrop-blur-sm", 
                  placeholder: "Enter CRM assignee email..." %>
            <p class="mt-2 text-sm text-gray-600 flex items-start">
              <svg class="h-4 w-4 text-gray-400 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              Interested Leads will be assigned to this User in the CRM
            </p>
          </div>

          <!-- Role -->
          <div>
            <%= form.label :role_id, class: "block text-base font-semibold text-gray-700 mb-3" do %>
              <span class="flex items-center">
                <svg class="h-5 w-5 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                </svg>
                Role
              </span>
            <% end %>
            <%= form.select :role_id, 
                  options_from_collection_for_select(@roles, :id, :name, @user.role_id), 
                  { prompt: "Select a role..." }, 
                  { class: "w-full py-4 px-6 border border-gray-300 rounded-2xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 text-lg bg-white/50 backdrop-blur-sm" } %>
          </div>

          <!-- Password Fields (only for existing users) -->
          <% if @user.persisted? %>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
              <div>
                <%= form.label :password, class: "block text-base font-semibold text-gray-700 mb-3" do %>
                  <span class="flex items-center">
                    <svg class="h-5 w-5 text-red-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                    </svg>
                    New Password
                  </span>
                <% end %>
                <%= form.password_field :password, 
                      class: "w-full py-4 px-6 border border-gray-300 rounded-2xl focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition-all duration-200 text-lg bg-white/50 backdrop-blur-sm", 
                      placeholder: "Enter new password..." %>
              </div>

              <div>
                <%= form.label :password_confirmation, class: "block text-base font-semibold text-gray-700 mb-3" do %>
                  <span class="flex items-center">
                    <svg class="h-5 w-5 text-red-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    Confirm Password
                  </span>
                <% end %>
                <%= form.password_field :password_confirmation, 
                      class: "w-full py-4 px-6 border border-gray-300 rounded-2xl focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition-all duration-200 text-lg bg-white/50 backdrop-blur-sm", 
                      placeholder: "Confirm new password..." %>
              </div>
            </div>
            <p class="mt-2 text-sm text-gray-600 flex items-start">
              <svg class="h-4 w-4 text-gray-400 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              Leave password fields blank to keep the current password
            </p>
          <% end %>

          <!-- Company Info (Read-only) -->
          <div class="bg-blue-50 rounded-2xl p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-3 flex items-center">
              <svg class="h-5 w-5 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
              </svg>
              Company Information
            </h3>
            
            <div class="text-sm text-gray-700">
              <p><span class="font-medium">Company:</span> <%= current_company.name %></p>
              <p class="mt-1"><span class="font-medium">Domain:</span> <%= current_company.domain %></p>
            </div>
          </div>
        </div>

        <!-- Form Actions -->
        <div class="bg-gray-50/80 backdrop-blur-sm px-8 py-6 -mx-8 -mb-8 rounded-b-3xl flex justify-between items-center">
          <%= link_to @user.persisted? ? company_user_path(@user) : company_users_path, 
                class: "inline-flex items-center px-6 py-3 border border-gray-300 text-base font-medium rounded-2xl text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200" do %>
            <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Cancel
          <% end %>
          
          <%= form.submit @user.persisted? ? "Update Team Member" : "Create Team Member", 
                class: "inline-flex items-center px-8 py-3 border border-transparent text-base font-medium rounded-2xl text-white bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200 shadow-lg hover:shadow-xl" %>
        </div>
      <% end %>
    </div>

    <!-- Help Text -->
    <div class="text-center">
      <p class="text-sm text-gray-500">
        <%= @user.persisted? ? "Team member changes will take effect immediately." : "New team members will receive login credentials via email." %>
      </p>
    </div>
  </div>
</div>
