<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "SysAdmin - Call Center Management" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-gray-50 h-screen overflow-hidden">
    <div class="flex h-screen">
      <!-- Sidebar -->
      <div class="fixed inset-y-0 left-0 w-64 bg-indigo-700 shadow-sm flex flex-col">
        <div class="flex items-center justify-center h-16 bg-indigo-800 flex-shrink-0">
          <span class="text-white text-lg font-semibold">SysAdmin Panel</span>
        </div>
        
        <!-- User info -->
        <div class="px-4 py-4 border-b border-indigo-600 flex-shrink-0">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="h-8 w-8 rounded-full bg-indigo-500 flex items-center justify-center">
                <span class="text-white text-sm font-medium">
                  <%= current_user.name&.first&.upcase || current_user.email&.first&.upcase %>
                </span>
              </div>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-white"><%= current_user.name || current_user.email %></p>
              <p class="text-xs text-indigo-200">System Administrator</p>
            </div>
          </div>
        </div>

        <!-- Navigation -->
        <nav class="flex-1 overflow-y-auto py-4">
          <%= link_to sysadmin_dashboard_path, 
                class: "#{request.path == sysadmin_dashboard_path ? 'bg-indigo-800 border-r-2 border-indigo-400' : ''} group flex items-center px-4 py-2 text-sm font-medium text-white hover:bg-indigo-600 transition-colors duration-200" do %>
            <svg class="mr-3 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2V7zm16 0V5a2 2 0 00-2-2H7a2 2 0 00-2 2v2"></path>
            </svg>
            Dashboard
          <% end %>

          <%= link_to sysadmin_companies_path, 
                class: "#{request.path.start_with?('/sysadmin/companies') ? 'bg-indigo-800 border-r-2 border-indigo-400' : ''} group flex items-center px-4 py-2 text-sm font-medium text-white hover:bg-indigo-600 transition-colors duration-200" do %>
            <svg class="mr-3 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
            Companies
          <% end %>

          <%= link_to sysadmin_users_path, 
                class: "#{request.path.start_with?('/sysadmin/users') ? 'bg-indigo-800 border-r-2 border-indigo-400' : ''} group flex items-center px-4 py-2 text-sm font-medium text-white hover:bg-indigo-600 transition-colors duration-200" do %>
            <svg class="mr-3 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
            </svg>
            Users
          <% end %>

          <%= link_to sysadmin_statuses_path, 
                class: "#{request.path.start_with?('/sysadmin/statuses') ? 'bg-indigo-800 border-r-2 border-indigo-400' : ''} group flex items-center px-4 py-2 text-sm font-medium text-white hover:bg-indigo-600 transition-colors duration-200" do %>
            <svg class="mr-3 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Statuses
          <% end %>

          <%= link_to sysadmin_sources_path, 
                class: "#{request.path.start_with?('/sysadmin/sources') ? 'bg-indigo-800 border-r-2 border-indigo-400' : ''} group flex items-center px-4 py-2 text-sm font-medium text-white hover:bg-indigo-600 transition-colors duration-200" do %>
            <svg class="mr-3 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
            </svg>
            Sources
          <% end %>

          <%= link_to sysadmin_roles_path, 
                class: "#{request.path.start_with?('/sysadmin/roles') ? 'bg-indigo-800 border-r-2 border-indigo-400' : ''} group flex items-center px-4 py-2 text-sm font-medium text-white hover:bg-indigo-600 transition-colors duration-200" do %>
            <svg class="mr-3 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
            </svg>
            Roles
          <% end %>
        </nav>

        <!-- Logout -->
        <div class="flex-shrink-0 p-4 border-t border-indigo-600">
          <%= link_to destroy_user_session_path, 
                data: { "turbo-method": :delete },
                class: "group flex items-center px-4 py-2 text-sm font-medium text-white hover:bg-indigo-600 rounded-md transition-colors duration-200" do %>
            <svg class="flex-shrink-0 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
            </svg>
            <span data-collapsible-sidebar-target="logoutText" class="ml-3">Sign out</span>
          <% end %>
        </div>
      </div>

      <!-- Main content -->
      <div data-collapsible-sidebar-target="content" class="ml-64 flex-1 flex flex-col h-screen overflow-hidden transition-all duration-300 ease-in-out">
        <!-- Header -->
        <header class="bg-white shadow-sm border-b border-gray-200">
          <div class="px-6 py-4">
            <h1 class="text-2xl font-semibold text-gray-900">
              <%= content_for(:page_title) || "Dashboard" %>
            </h1>
          </div>
        </header>

        <!-- Flash messages -->
        <% if flash[:notice] %>
          <div class="mx-6 mt-4 rounded-md bg-green-50 p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium text-green-800"><%= flash[:notice] %></p>
              </div>
            </div>
          </div>
        <% end %>

        <% if flash[:alert] %>
          <div class="mx-6 mt-4 rounded-md bg-red-50 p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium text-red-800"><%= flash[:alert] %></p>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Page content -->
        <main class="flex-1 overflow-y-auto">
          <div class="p-6">
            <%= yield %>
          </div>
        </main>
      </div>
    </div>
  </body>
</html>
