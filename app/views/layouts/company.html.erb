<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Company Dashboard - Call Center Management" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-gray-50 h-screen overflow-hidden">
    <div class="flex h-screen" data-controller="collapsible-sidebar">
      <!-- Sidebar -->
      <div data-collapsible-sidebar-target="sidebar"
           data-action="mouseenter->collapsible-sidebar#mouseEnter mouseleave->collapsible-sidebar#mouseLeave"
           class="fixed inset-y-0 left-0 w-64 bg-blue-700 shadow-sm flex flex-col transition-all duration-300 ease-in-out z-30">
        
          <div class="flex items-center justify-center h-16 bg-blue-800 flex-shrink-0">
            <!-- Logo when expanded -->
            <div data-collapsible-sidebar-target="logo" class="flex items-center">
              <% if current_company.has_logo? %>
                <%= image_tag current_company.display_logo_url, 
                      class: "h-10 w-auto max-w-48 object-contain", 
                      alt: "#{current_company.name} Logo" %>
              <% else %>
                <span class="text-white text-lg font-semibold"><%= current_company.name %></span>
              <% end %>
            </div>
            
            <!-- Icon when collapsed -->
            <div data-collapsible-sidebar-target="icon" class="hidden w-10 h-10 rounded-full bg-blue-500 flex items-center justify-center">
              <% if current_company.has_icon? %>
                <%= image_tag current_company.display_icon_url, 
                      class: "h-8 w-8 object-contain rounded-full", 
                      alt: "#{current_company.name} Icon" %>
              <% else %>
                <span class="text-white text-sm font-bold">
                  <%= current_company.initials %>
                </span>
              <% end %>
            </div>
          </div>
        
        <!-- User info -->
        <div data-collapsible-sidebar-target="userInfo" class="px-4 py-4 border-b border-blue-600 flex-shrink-0">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="h-8 w-8 rounded-full bg-blue-500 flex items-center justify-center">
                <span class="text-white text-sm font-medium">
                  <%= current_user.name&.first&.upcase || current_user.email&.first&.upcase %>
                </span>
              </div>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-white"><%= current_user.name || current_user.email %></p>
              <p class="text-xs text-blue-200"><%= current_user.role.name.titleize %></p>
            </div>
          </div>
        </div>

        <!-- Navigation -->
        <nav class="flex-1 overflow-y-auto py-4">
          <%= link_to company_dashboard_path, 
                class: "#{request.path == company_dashboard_path ? 'bg-blue-800 border-r-2 border-blue-400' : ''} group flex items-center px-4 py-2 text-sm font-medium text-white hover:bg-blue-600 transition-colors duration-200" do %>
            <svg class="flex-shrink-0 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2V7zm16 0V5a2 2 0 00-2-2H7a2 2 0 00-2 2v2"></path>
            </svg>
            <span data-collapsible-sidebar-target="navText" class="ml-3">Dashboard</span>
          <% end %>

          <%= link_to company_leads_path, 
                class: "#{request.path.start_with?('/company/leads') && !request.path.start_with?('/company/incomplete_calls') ? 'bg-blue-800 border-r-2 border-blue-400' : ''} group flex items-center px-4 py-2 text-sm font-medium text-white hover:bg-blue-600 transition-colors duration-200" do %>
            <svg class="flex-shrink-0 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
            <span data-collapsible-sidebar-target="navText" class="ml-3">Leads</span>
          <% end %>

          <%= link_to company_incomplete_calls_path, 
                class: "#{request.path.start_with?('/company/incomplete_calls') ? 'bg-blue-800 border-r-2 border-blue-400' : ''} group flex items-center px-4 py-2 text-sm font-medium text-white hover:bg-blue-600 transition-colors duration-200" do %>
            <svg class="flex-shrink-0 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span data-collapsible-sidebar-target="navText" class="ml-3">Incomplete Calls</span>
          <% end %>

          <%= link_to company_projects_path, 
                class: "#{request.path.start_with?('/company/projects') ? 'bg-blue-800 border-r-2 border-blue-400' : ''} group flex items-center px-4 py-2 text-sm font-medium text-white hover:bg-blue-600 transition-colors duration-200" do %>
            <svg class="flex-shrink-0 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
            </svg>
            <span data-collapsible-sidebar-target="navText" class="ml-3">Projects</span>
          <% end %>

          <% if current_user.admin? %>
            <%= link_to company_users_path, 
                  class: "#{request.path.start_with?('/company/users') ? 'bg-blue-800 border-r-2 border-blue-400' : ''} group flex items-center px-4 py-2 text-sm font-medium text-white hover:bg-blue-600 transition-colors duration-200" do %>
              <svg class="flex-shrink-0 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
              </svg>
              <span data-collapsible-sidebar-target="navText" class="ml-3">Users</span>
            <% end %>

            <%= link_to company_rechurn_leads_path, 
                  class: "#{request.path.start_with?('/company/rechurn_leads') ? 'bg-blue-800 border-r-2 border-blue-400' : ''} group flex items-center px-4 py-2 text-sm font-medium text-white hover:bg-blue-600 transition-colors duration-200" do %>
              <svg class="flex-shrink-0 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
              </svg>
              <span data-collapsible-sidebar-target="navText" class="ml-3">Rechurn Leads</span>
            <% end %>
          <% end %>
        </nav>

        <!-- Logout -->
        <div class="flex-shrink-0 p-4 border-t border-blue-600">
          <%= link_to destroy_user_session_path, 
                data: { "turbo-method": :delete },
                class: "group flex items-center px-4 py-2 text-sm font-medium text-white hover:bg-blue-600 rounded-md transition-colors duration-200" do %>
            <svg class="flex-shrink-0 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
            </svg>
            <span data-collapsible-sidebar-target="logoutText" class="ml-3">Sign out</span>
          <% end %>
        </div>
      </div>

      <!-- Main content -->
      <div data-collapsible-sidebar-target="content" class="ml-64 flex-1 flex flex-col h-screen overflow-hidden transition-all duration-300 ease-in-out">
        <!-- Header -->
        <header class="bg-white shadow-sm border-b border-gray-200">
          <div class="px-6 py-4">
            <h1 class="text-2xl font-semibold text-gray-900">
              <%= content_for(:page_title) || "Dashboard" %>
            </h1>
          </div>
        </header>

        <!-- Flash messages -->
        <% if flash[:notice] %>
          <div class="mx-6 mt-4 rounded-md bg-green-50 p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium text-green-800"><%= flash[:notice] %></p>
              </div>
            </div>
          </div>
        <% end %>

        <% if flash[:alert] %>
          <div class="mx-6 mt-4 rounded-md bg-red-50 p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium text-red-800"><%= flash[:alert] %></p>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Error alerts container for TURBO_STREAM -->
        <div id="error-alerts"></div>

        <!-- Page content -->
        <main class="flex-1 overflow-y-auto">
          <div class="p-6">
            <%= yield %>
          </div>
        </main>
      </div>
    </div>

  </body>
</html>
